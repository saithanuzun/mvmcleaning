@using mvmclean.backend.Application.Features.Contractor.Queries

@model GetContractorByIdResponse

@{
    ViewData["Title"] = "My Profile";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-md-12">
            <h2 class="mb-4">
                <i class="bi bi-person-circle"></i> My Profile
            </h2>
            <div class="btn-group" role="group">
                <a href="@Url.Action("Edit", "Profile")" class="btn btn-primary">
                    <i class="bi bi-pencil"></i> Edit Profile
                </a>
                <a href="@Url.Action("Index", "Coverage")" class="btn btn-primary">
                    <i class="bi bi-geo-alt"></i> Manage Coverage Areas
                </a>
            </div>
        </div>
    </div>

    @if (Model != null)
    {
        <div class="row">
            <div class="col-md-8">
                <div class="card shadow-sm">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">Personal Information</h5>
                    </div>
                    <div class="card-body">
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label class="form-label"><strong>Full Name</strong></label>
                                <p class="text-muted">@Model.FullName</p>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label"><strong>Username</strong></label>
                                <p class="text-muted">@Model.Username</p>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label class="form-label"><strong>Email</strong></label>
                                <p class="text-muted">@Model.Email</p>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label"><strong>Phone Number</strong></label>
                                <p class="text-muted">@Model.PhoneNumber</p>
                            </div>
                        </div>
                        
                        <div class="row mb-3">
                            <div class="col-md-12">
                                <label class="form-label"><strong>Account Status</strong></label>
                                <p>
                                    @if (Model.IsActive)
                                    {
                                        <span class="badge bg-success">
                                            <i class="bi bi-check-circle-fill"></i> Active
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning">
                                            <i class="bi bi-exclamation-triangle-fill"></i> Inactive
                                        </span>
                                    }
                                </p>
                            </div>
                        </div>
                    </div>
                </div>

                @if (Model.Services != null && Model.Services.Count > 0)
                {
                    <div class="card shadow-sm mt-4">
                        <div class="card-header bg-primary text-white">
                            <h5 class="mb-0">Services You Provide</h5>
                        </div>
                        <div class="card-body">
                            <ul class="list-group list-group-flush">
                                @foreach (var serviceItem in Model.Services)
                                {
                                    <li class="list-group-item">
                                        <i class="bi bi-check-circle-fill" style="color: #194376;"></i>
                                        <strong>@serviceItem.ServiceName</strong>
                                        <br />
                                        <small class="text-muted">@serviceItem.Category - @serviceItem.Description</small>
                                    </li>
                                }
                            </ul>
                        </div>
                    </div>
                }

                @if (Model.CoverageAreas != null && Model.CoverageAreas.Count > 0)
                {
                    <div class="card shadow-sm mt-4">
                        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">Coverage Areas</h5>
                            <a href="@Url.Action("List", "Coverage")" class="btn btn-sm btn-light">
                                <i class="bi bi-eye"></i> View All
                            </a>
                        </div>
                        <div class="card-body">
                            <ul class="list-group list-group-flush">
                                @foreach (var area in Model.CoverageAreas.Take(5))
                                {
                                    <li class="list-group-item">
                                        <i class="bi bi-geo-alt-fill" style="color: #46C6CE;"></i>
                                        Postcode: @area.Postcode
                                    </li>
                                }
                                @if (Model.CoverageAreas.Count > 5)
                                {
                                    <li class="list-group-item text-muted">
                                        <em>+@(Model.CoverageAreas.Count - 5) more area(s)</em>
                                    </li>
                                }
                            </ul>
                        </div>
                    </div>
                }

                @if (Model.WorkingHours != null && Model.WorkingHours.Any(h => h.IsWorkingDay))
                {
                    <div class="card shadow-sm mt-4">
                        <div class="card-header bg-primary text-white">
                            <h5 class="mb-0">Working Hours</h5>
                        </div>
                        <div class="card-body">
                            <ul class="list-group list-group-flush">
                                @foreach (var hours in Model.WorkingHours.Where(h => h.IsWorkingDay))
                                {
                                    <li class="list-group-item">
                                        <strong>@hours.DayOfWeek:</strong> @hours.StartTime.ToString("hh:mm tt") - @hours.EndTime.ToString("hh:mm tt")
                                    </li>
                                }
                            </ul>
                        </div>
                    </div>
                }
            </div>

            <div class="col-md-4">
                <div class="card shadow-sm">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">Profile Overview</h5>
                    </div>
                    <div class="card-body">
                        <p>
                            <strong>Account Status:</strong>
                            @if (Model.IsActive)
                            {
                                <span class="badge bg-success">
                                    <i class="bi bi-check-circle-fill"></i> Active
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-warning">
                                    <i class="bi bi-exclamation-triangle-fill"></i> Inactive
                                </span>
                            }
                        </p>
                        <p>
                            <strong>Services:</strong>
                            <span class="badge bg-primary">@(Model.Services?.Count ?? 0)</span>
                        </p>
                        <p>
                            <strong>Coverage Areas:</strong>
                            <span class="badge bg-primary">@(Model.CoverageAreas?.Count ?? 0)</span>
                        </p>
                        <p>
                            <strong>Reviews:</strong>
                            <span class="badge bg-primary">@(Model.Reviews?.Count ?? 0)</span>
                        </p>
                        <p>
                            <strong>Unavailable Slots:</strong>
                            <span class="badge bg-secondary">@(Model.UnavailableSlots?.Count ?? 0)</span>
                        </p>
                    </div>
                </div>

                @if (Model.Reviews != null && Model.Reviews.Count > 0)
                {
                    <div class="card shadow-sm mt-4">
                        <div class="card-header bg-primary text-white">
                            <h5 class="mb-0">Recent Reviews</h5>
                        </div>
                        <div class="card-body">
                            <small class="text-muted">
                                You have <strong>@Model.Reviews.Count</strong> review(s) from customers.
                            </small>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-warning">Profile not found.</div>
    }
</div>
