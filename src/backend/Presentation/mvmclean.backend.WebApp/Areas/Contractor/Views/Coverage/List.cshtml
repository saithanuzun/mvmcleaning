@using mvmclean.backend.Application.Features.Contractor.Queries

@model GetContractorCoveragesResponse

@{
    ViewData["Title"] = "Coverage Areas";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-md-12">
            <h2 class="mb-4">
                <i class="bi bi-geo-alt"></i> Your Coverage Areas
            </h2>
            <div class="btn-group" role="group">
                <a href="@Url.Action("Index", "Coverage")" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Add Coverage Area
                </a>
                <a href="@Url.Action("Index", "Profile")" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Back to Profile
                </a>
            </div>
        </div>
    </div>

    @if (Model != null && Model.CoverageAreas != null && Model.CoverageAreas.Count > 0)
    {
        <div class="row">
            <div class="col-md-8">
                <div class="card shadow-sm">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">
                            <i class="bi bi-list-check"></i> Active Coverage Areas
                            <span class="badge bg-light text-dark float-end">@Model.TotalCount</span>
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>
                                            <i class="bi bi-geo-alt"></i> Postcode Area
                                        </th>
                                        <th>Status</th>
                                        <th style="width: 150px;">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var area in Model.CoverageAreas)
                                    {
                                        <tr>
                                            <td>
                                                <strong>@area.PostcodeArea</strong>
                                            </td>
                                            <td>
                                                @if (area.IsActive)
                                                {
                                                    <span class="badge bg-success">
                                                        <i class="bi bi-check-circle-fill"></i> Active
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">
                                                        <i class="bi bi-x-circle-fill"></i> Inactive
                                                    </span>
                                                }
                                            </td>
                                            <td>
                                                <button class="btn btn-sm btn-warning" disabled>
                                                    <i class="bi bi-pencil"></i> Edit
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card shadow-sm">
                    <div class="card-header bg-secondary text-white">
                        <h5 class="mb-0">
                            <i class="bi bi-info-circle"></i> Summary
                        </h5>
                    </div>
                    <div class="card-body">
                        <p>
                            <strong>Total Areas:</strong>
                            <span class="badge bg-primary">@Model.CoverageAreas.Count</span>
                        </p>
                        <p>
                            <strong>Active:</strong>
                            <span class="badge bg-success">@Model.CoverageAreas.Count(x => x.IsActive)</span>
                        </p>
                        <p>
                            <strong>Inactive:</strong>
                            <span class="badge bg-secondary">@Model.CoverageAreas.Count(x => !x.IsActive)</span>
                        </p>
                        <hr />
                        <a href="@Url.Action("Index", "Coverage")" class="btn btn-primary btn-sm w-100">
                            <i class="bi bi-plus-lg"></i> Add New Coverage Area
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-md-8">
                <div class="alert alert-info" role="alert">
                    <h4 class="alert-heading">
                        <i class="bi bi-info-circle"></i> No Coverage Areas Yet
                    </h4>
                    <p>You haven't added any coverage areas yet. Start by adding your first coverage area to let customers know where you provide services.</p>
                    <hr />
                    <a href="@Url.Action("Index", "Coverage")" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i> Add Your First Coverage Area
                    </a>
                </div>
            </div>
        </div>
    }
</div>
