@using mvmclean.backend.Application.Features.Contractor.Commands
@model CreateContractorRequest
@{
    ViewData["Title"] = "Contractor Registration";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Contractor Registration - MVM Cleaning</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">

    <style>
        :root {
            --primary-color: #194376;    /* Dark blue */
            --secondary-color: #46C6CE;  /* Teal/cyan */
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            background-color: #f5f5f5;
            min-height: 100vh;
            padding: 40px 20px;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .register-container {
            max-width: 600px;
            margin: 0 auto;
        }

        .register-card {
            border: none;
            border-radius: 15px;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.2);
            overflow: hidden;
        }

        .register-card .card-header {
            background-color: var(--primary-color);
            border: none;
            padding: 30px 20px;
            text-align: center;
        }

        .register-card .card-header h2 {
            color: white;
            font-weight: 700;
            margin-bottom: 10px;
            font-size: 28px;
        }

        .register-card .card-header p {
            color: rgba(255, 255, 255, 0.9);
            margin: 0;
            font-size: 14px;
        }

        .register-card .card-body {
            padding: 40px 30px;
            background-color: #ffffff;
        }

        .form-label {
            color: var(--primary-color);
            font-weight: 600;
            margin-bottom: 8px;
            font-size: 14px;
        }

        .form-label .text-danger {
            margin-left: 3px;
        }

        .form-control {
            border: 2px solid #e0e0e0;
            border-radius: 8px;
            padding: 12px 15px;
            font-size: 14px;
            transition: all 0.3s ease;
        }

        .form-control:focus {
            border-color: var(--primary-color);
            box-shadow: 0 0 0 0.2rem rgba(25, 67, 118, 0.15);
        }

        .form-control::placeholder {
            color: #999;
        }

        .text-danger {
            color: #dc2626 !important;
            font-size: 12px;
            display: block;
            margin-top: 5px;
        }

        .form-check-input {
            border: 2px solid #e0e0e0;
            border-radius: 4px;
            width: 20px;
            height: 20px;
            margin-top: 4px;
            cursor: pointer;
        }

        .form-check-input:checked {
            background-color: var(--primary-color);
            border-color: var(--primary-color);
        }

        .form-check-input:focus {
            border-color: var(--primary-color);
            box-shadow: 0 0 0 0.2rem rgba(25, 67, 118, 0.15);
        }

        .form-check-label {
            color: #333;
            font-weight: 500;
            margin-left: 8px;
            cursor: pointer;
            font-size: 14px;
        }

        .btn-submit {
            background-color: var(--primary-color);
            border: none;
            border-radius: 8px;
            padding: 12px 20px;
            font-weight: 600;
            font-size: 15px;
            transition: all 0.3s ease;
            color: white;
            margin-top: 10px;
        }

        .btn-submit:hover {
            background-color: #153760;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(25, 67, 118, 0.3);
        }

        .btn-login {
            background-color: var(--secondary-color);
            border: none;
            border-radius: 8px;
            padding: 12px 20px;
            font-weight: 600;
            font-size: 15px;
            transition: all 0.3s ease;
            color: white;
            text-decoration: none;
            text-align: center;
        }

        .btn-login:hover {
            background-color: #3ab4bb;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(70, 198, 206, 0.3);
            color: white;
        }

        .divider {
            text-align: center;
            margin: 20px 0;
            position: relative;
            color: #999;
            font-size: 13px;
        }

        .row-2cols {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 15px;
        }

        .alert {
            border-radius: 8px;
            border: none;
            margin-bottom: 20px;
        }

        .alert-danger {
            background-color: #fee2e2;
            color: #991b1b;
        }

        .alert-success {
            background-color: #dcfce7;
            color: #166534;
        }

        .logo-icon {
            font-size: 48px;
            color: white;
            margin-bottom: 10px;
        }

        @@media (max-width: 576px) {
            .row-2cols {
                grid-template-columns: 1fr;
            }

            .register-card .card-body {
                padding: 30px 20px;
            }

            .register-card .card-header h2 {
                font-size: 24px;
            }
        }
    </style>
</head>

<body>
<div class="register-container">
    <div class="card register-card">
        <div class="card-header">
            <div class="logo-icon text-center">
                <i class="bi bi-person-fill-add"></i>
            </div>
            <h2>Create Your Account</h2>
            <p>Join MVM Cleaning as a contractor</p>
        </div>

        <div class="card-body">
            @if(TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="bi bi-exclamation-circle me-2"></i>@TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { enctype = "multipart/form-data", @class = "needs-validation", novalidate = "novalidate" }))
            {
                @Html.AntiForgeryToken()

                <!-- First Row: First Name & Last Name -->
                <div class="row-2cols mb-4">
                    <div>
                        <label class="form-label">
                            <i class="bi bi-person"></i> First Name <span class="text-danger">*</span>
                        </label>
                        @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", placeholder = "Enter first name", required = "required" })
                        @Html.ValidationMessageFor(m => m.FirstName, "", new { @class = "text-danger" })
                    </div>
                    <div>
                        <label class="form-label">
                            <i class="bi bi-person"></i> Last Name <span class="text-danger">*</span>
                        </label>
                        @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", placeholder = "Enter last name", required = "required" })
                        @Html.ValidationMessageFor(m => m.LastName, "", new { @class = "text-danger" })
                    </div>
                </div>

                <!-- Email -->
                <div class="mb-4">
                    <label class="form-label">
                        <i class="bi bi-envelope"></i> Email <span class="text-danger">*</span>
                    </label>
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", type = "email", placeholder = "Enter email address", required = "required" })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                </div>

                <!-- Phone -->
                <div class="mb-4">
                    <label class="form-label">
                        <i class="bi bi-telephone"></i> Phone Number <span class="text-danger">*</span>
                    </label>
                    @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control", placeholder = "Enter phone number", required = "required" })
                    @Html.ValidationMessageFor(m => m.PhoneNumber, "", new { @class = "text-danger" })
                </div>

                <!-- Address Section -->
                <div style="border-top: 2px solid #f0f0f0; padding-top: 20px; margin-bottom: 20px;">
                    <h5 style="color: var(--primary-color); margin-bottom: 15px; font-weight: 600;">
                        <i class="bi bi-geo-alt"></i> Address
                    </h5>
                </div>

                <!-- Street -->
                <div class="mb-4">
                    <label class="form-label">
                        <i class="bi bi-house"></i> Street Address
                    </label>
                    @Html.TextBoxFor(m => m.Street, new { @class = "form-control", placeholder = "Enter street address" })
                    @Html.ValidationMessageFor(m => m.Street, "", new { @class = "text-danger" })
                </div>

                <!-- City & Postcode Row -->
                <div class="row-2cols mb-4">
                    <div>
                        <label class="form-label">
                            <i class="bi bi-building"></i> City
                        </label>
                        @Html.TextBoxFor(m => m.City, new { @class = "form-control", placeholder = "Enter city" })
                        @Html.ValidationMessageFor(m => m.City, "", new { @class = "text-danger" })
                    </div>
                    <div>
                        <label class="form-label">
                            <i class="bi bi-geo-fill"></i> Postcode
                        </label>
                        @Html.TextBoxFor(m => m.PostcodeValue, new { @class = "form-control", placeholder = "Enter postcode" })
                        @Html.ValidationMessageFor(m => m.PostcodeValue, "", new { @class = "text-danger" })
                    </div>
                </div>

                <!-- Additional Info -->
                <div class="mb-4">
                    <label class="form-label">
                        <i class="bi bi-info-circle"></i> Additional Information
                    </label>
                    @Html.TextAreaFor(m => m.AdditionalInfo, new { @class = "form-control", placeholder = "e.g., Suite number, apartment, building name", rows = 3 })
                    @Html.ValidationMessageFor(m => m.AdditionalInfo, "", new { @class = "text-danger" })
                </div>

                <!-- Username -->
                <div class="mb-4">
                    <label class="form-label">
                        <i class="bi bi-person-badge"></i> Username <span class="text-danger">*</span>
                    </label>
                    @Html.TextBoxFor(m => m.Username, new { @class = "form-control", placeholder = "Choose a unique username", required = "required" })
                    @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
                </div>

                <!-- Password Row -->
                <div class="row-2cols mb-4">
                    <div>
                        <label class="form-label">
                            <i class="bi bi-lock"></i> Password <span class="text-danger">*</span>
                        </label>
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", id = "Password", placeholder = "Create password", required = "required" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </div>
                    <div>
                        <label class="form-label">
                            <i class="bi bi-lock-fill"></i> Confirm Password <span class="text-danger">*</span>
                        </label>
                        <input type="password" class="form-control" id="ConfirmPassword" placeholder="Confirm password" required />
                        <span id="passwordError" class="text-danger"></span>
                    </div>
                </div>

                <!-- Terms -->
                <div class="form-check mb-4">
                    <input type="checkbox" class="form-check-input" id="terms" name="terms" required>
                    <label class="form-check-label" for="terms">
                        I agree to the terms and conditions <span class="text-danger">*</span>
                    </label>
                </div>

                <button type="submit" class="btn btn-submit w-100">
                    <i class="bi bi-person-check me-2"></i>Create Account
                </button>
            }

            <div class="divider">
                Already have an account?
            </div>

            <a href="@Url.Action("Login", "Account", new { area = "Contractor" })" class="btn btn-login w-100">
                <i class="bi bi-box-arrow-in-right me-2"></i>Back to Login
            </a>

            <hr class="my-4" style="border-color: #e0e0e0;">
            <p style="text-align: center; color: #999; font-size: 12px; margin: 0;">
                <i class="bi bi-shield-check"></i> Your data is secure and encrypted
            </p>
        </div>
    </div>
</div>

<!-- JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script>
    $('#ConfirmPassword').on('keyup', function () {
        const pass = $('#Password').val();
        const confirm = $(this).val();

        if (pass && confirm && pass !== confirm) {
            $('#passwordError').text('Passwords do not match');
        } else {
            $('#passwordError').text('');
        }
    });
</script>

</body>
</html>
