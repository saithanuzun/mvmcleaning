@using mvmclean.backend.Application.Features.Contractor

@model GetContractorByIdResponse

@{
    ViewData["Title"] = "Working Days";
}

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-md-12">
            <h2 class="mb-4">
                <i class="bi bi-calendar3"></i> Working Days
            </h2>
            <a href="@Url.Action("Index", "Availability")" class="btn btn-secondary mb-3">
                <i class="bi bi-arrow-left"></i> Back to Availability
            </a>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(TempData["Success"]?.ToString()))
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (!string.IsNullOrEmpty(TempData["Error"]?.ToString()))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-circle"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Your Working Schedule</h5>
                </div>
                <div class="card-body">
                    @if (Model?.WorkingHours != null && Model.WorkingHours.Any(h => h.IsWorkingDay))
                    {
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead class="table-light">
                                        <tr>
                                            <th>Day</th>
                                            <th>Start Time</th>
                                            <th>End Time</th>
                                            <th>Duration</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                    @foreach (var hours in Model.WorkingHours.Where(h => h.IsWorkingDay).OrderBy(h => h.DayOfWeek))
                                    {
                                                <tr>
                                                    <td>
                                                        <strong>@hours.DayOfWeek</strong>
                                                    </td>
                                                    <td>@hours.StartTime.ToString("hh:mm tt")</td>
                                                    <td>@hours.EndTime.ToString("hh:mm tt")</td>
                                                    <td>
                                                        <small class="text-muted">
                                                    @{
                                                        var duration = hours.EndTime - hours.StartTime;
                                                        <text>@duration.Hours h @duration.Minutes m</text>
                                                    }
                                                        </small>
                                                    </td>
                                                    <td>
                                                        <button class="btn btn-sm btn-warning" disabled title="Coming soon">
                                                            <i class="bi bi-pencil"></i> Edit
                                                        </button>
                                                        <button class="btn btn-sm btn-danger" disabled title="Coming soon">
                                                            <i class="bi bi-trash"></i> Delete
                                                        </button>
                                                    </td>
                                                </tr>
                                    }
                                    </tbody>
                                </table>
                            </div>
                    }
                    else
                    {
                            <div class="alert alert-info">
                                <i class="bi bi-info-circle"></i> No working days configured yet.
                            </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Add Working Day</h5>
                </div>
                <div class="card-body">
                    <form method="post" action="@Url.Action("AddWorkingDay", "Availability")">
                        <div class="mb-3">
                            <label for="dayOfWeek" class="form-label"><strong>Day</strong></label>
                            <select class="form-control" id="dayOfWeek" name="dayOfWeek" required>
                                <option value="">Select a day</option>
                                <option value="Monday">Monday</option>
                                <option value="Tuesday">Tuesday</option>
                                <option value="Wednesday">Wednesday</option>
                                <option value="Thursday">Thursday</option>
                                <option value="Friday">Friday</option>
                                <option value="Saturday">Saturday</option>
                                <option value="Sunday">Sunday</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label for="startTime" class="form-label"><strong>Start Time</strong></label>
                            <input type="time" class="form-control" id="startTime" name="startTime" required>
                        </div>

                        <div class="mb-3">
                            <label for="endTime" class="form-label"><strong>End Time</strong></label>
                            <input type="time" class="form-control" id="endTime" name="endTime" required>
                        </div>

                        <button type="submit" class="btn btn-primary w-100">
                            <i class="bi bi-plus-circle"></i> Add Working Day
                        </button>
                    </form>

                    <hr />

                    <div class="alert alert-info">
                        <small>Set your regular working hours for each day of the week.</small>
                    </div>
                </div>
            </div>

            <div class="card shadow-sm mt-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Info</h5>
                </div>
                <div class="card-body">
                    <p class="small text-muted">
                        Working days define your regular availability. You can set different hours for each day of the week.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
