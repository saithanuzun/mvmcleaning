@model mvmclean.backend.WebApp.Areas.Contractor.Models.ContractorViewModel

@{
    ViewData["Title"] = "Dashboard";
}

<div class="container-fluid mt-4">
    <!-- Welcome Header -->
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="mb-2">
                        <i class="bi bi-speedometer2" style="color: #194376;"></i> Welcome Back, @Model.FullName!
                    </h2>
                    <p class="text-muted mb-0">Here's an overview of your contractor dashboard</p>
                </div>
                <div>
                    <span class="badge bg-primary" style="font-size: 14px; padding: 10px 15px;">
                        <i class="bi bi-calendar"></i> @DateTime.Now.ToString("dddd, d MMMM yyyy")
                    </span>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Stats Row -->
    <div class="row mb-4">
        <div class="col-md-3 col-sm-6 mb-3">
            <div class="card shadow-sm border-0 h-100" style="border-top: 4px solid #194376;">
                <div class="card-body text-center">
                    <div style="font-size: 36px; color: #194376; margin-bottom: 10px;">
                        <i class="bi bi-calendar-check"></i>
                    </div>
                    <h6 class="text-muted mb-2">Active Bookings</h6>
                    <h3 class="mb-0" style="color: #194376;">0</h3>
                    <small class="text-muted">This month</small>
                </div>
            </div>
        </div>

        <div class="col-md-3 col-sm-6 mb-3">
            <div class="card shadow-sm border-0 h-100" style="border-top: 4px solid #46C6CE;">
                <div class="card-body text-center">
                    <div style="font-size: 36px; color: #46C6CE; margin-bottom: 10px;">
                        <i class="bi bi-star"></i>
                    </div>
                    <h6 class="text-muted mb-2">Rating</h6>
                    <h3 class="mb-0" style="color: #46C6CE;">4.8/5</h3>
                    <small class="text-muted">Based on reviews</small>
                </div>
            </div>
        </div>

        <div class="col-md-3 col-sm-6 mb-3">
            <div class="card shadow-sm border-0 h-100" style="border-top: 4px solid #194376;">
                <div class="card-body text-center">
                    <div style="font-size: 36px; color: #194376; margin-bottom: 10px;">
                        <i class="bi bi-map"></i>
                    </div>
                    <h6 class="text-muted mb-2">Coverage Areas</h6>
                    <h3 class="mb-0" style="color: #194376;">0</h3>
                    <small class="text-muted">Service areas</small>
                </div>
            </div>
        </div>

        <div class="col-md-3 col-sm-6 mb-3">
            <div class="card shadow-sm border-0 h-100" style="border-top: 4px solid #46C6CE;">
                <div class="card-body text-center">
                    <div style="font-size: 36px; color: #46C6CE; margin-bottom: 10px;">
                        <i class="bi bi-cash-coin"></i>
                    </div>
                    <h6 class="text-muted mb-2">Earnings</h6>
                    <h3 class="mb-0" style="color: #46C6CE;">Â£0.00</h3>
                    <small class="text-muted">This month</small>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Profile Information Card -->
        <div class="col-md-6 mb-4">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white" style="background-color: #194376 !important;">
                    <h5 class="mb-0">
                        <i class="bi bi-person-circle me-2"></i>Profile Information
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="text-muted small">Full Name</label>
                            <p class="mb-0" style="color: #194376; font-weight: 600;">@Model.FullName</p>
                        </div>
                        <div class="col-md-6">
                            <label class="text-muted small">Username</label>
                            <p class="mb-0" style="color: #194376; font-weight: 600;">@Model.Username</p>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="text-muted small">Email Address</label>
                            <p class="mb-0" style="color: #194376; font-weight: 600;">
                                <i class="bi bi-envelope me-2" style="color: #46C6CE;"></i>@Model.Email
                            </p>
                        </div>
                        <div class="col-md-6">
                            <label class="text-muted small">Phone Number</label>
                            <p class="mb-0" style="color: #194376; font-weight: 600;">
                                <i class="bi bi-telephone me-2" style="color: #46C6CE;"></i>@Model.PhoneNumber
                            </p>
                        </div>
                    </div>

                    <hr style="border-color: #e0e0e0;">

                    <a href="@Url.Action("Index", "Profile")" class="btn btn-primary btn-sm">
                        <i class="bi bi-pencil me-2"></i>Edit Profile
                    </a>
                </div>
            </div>
        </div>

        <!-- Quick Actions Card -->
        <div class="col-md-6 mb-4">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white" style="background-color: #194376 !important;">
                    <h5 class="mb-0">
                        <i class="bi bi-lightning me-2"></i>Quick Actions
                    </h5>
                </div>
                <div class="card-body">
                    <div class="list-group list-group-flush">
                        <a href="@Url.Action("Index", "Bookings")" class="list-group-item list-group-item-action px-0 py-3 border-bottom">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="mb-0" style="color: #194376;">
                                        <i class="bi bi-calendar-check me-2" style="color: #46C6CE;"></i>View My Bookings
                                    </h6>
                                    <small class="text-muted">Check upcoming jobs</small>
                                </div>
                                <i class="bi bi-chevron-right text-muted"></i>
                            </div>
                        </a>

                        <a href="@Url.Action("Index", "Coverage")" class="list-group-item list-group-item-action px-0 py-3 border-bottom">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="mb-0" style="color: #194376;">
                                        <i class="bi bi-map me-2" style="color: #46C6CE;"></i>Manage Coverage Areas
                                    </h6>
                                    <small class="text-muted">Update service locations</small>
                                </div>
                                <i class="bi bi-chevron-right text-muted"></i>
                            </div>
                        </a>

                        <a href="@Url.Action("Index", "Availability")" class="list-group-item list-group-item-action px-0 py-3 border-bottom">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="mb-0" style="color: #194376;">
                                        <i class="bi bi-calendar me-2" style="color: #46C6CE;"></i>Availability Settings
                                    </h6>
                                    <small class="text-muted">Set working hours</small>
                                </div>
                                <i class="bi bi-chevron-right text-muted"></i>
                            </div>
                        </a>

                        <a href="@Url.Action("Index", "Invoices")" class="list-group-item list-group-item-action px-0 py-3">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="mb-0" style="color: #194376;">
                                        <i class="bi bi-receipt me-2" style="color: #46C6CE;"></i>View Invoices
                                    </h6>
                                    <small class="text-muted">Check earnings and payments</small>
                                </div>
                                <i class="bi bi-chevron-right text-muted"></i>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Information Cards Row -->
    <div class="row">
        <div class="col-md-6 mb-4">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white" style="background-color: #194376 !important;">
                    <h5 class="mb-0">
                        <i class="bi bi-info-circle me-2"></i>Account Status
                    </h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="text-muted">Account Status</span>
                            <span class="badge bg-primary">Active</span>
                        </div>
                    </div>
                    <div class="mb-3">
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="text-muted">Profile Completion</span>
                            <span class="badge bg-secondary">75%</span>
                        </div>
                    </div>
                    <div class="progress mb-3">
                        <div class="progress-bar" style="background-color: #194376; width: 75%"></div>
                    </div>
                    <small class="text-muted">
                        <i class="bi bi-lightbulb me-1"></i>Complete your profile to get more bookings!
                    </small>
                </div>
            </div>
        </div>

        <div class="col-md-6 mb-4">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white" style="background-color: #194376 !important;">
                    <h5 class="mb-0">
                        <i class="bi bi-graph-up me-2"></i>Performance
                    </h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <span class="text-muted">Completion Rate</span>
                            <span style="color: #194376; font-weight: 600;">100%</span>
                        </div>
                        <div class="progress" style="height: 8px;">
                            <div class="progress-bar" style="background-color: #194376; width: 100%"></div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <span class="text-muted">Response Time</span>
                            <span style="color: #46C6CE; font-weight: 600;">2 hours</span>
                        </div>
                        <div class="progress" style="height: 8px;">
                            <div class="progress-bar" style="background-color: #46C6CE; width: 85%"></div>
                        </div>
                    </div>
                    <small class="text-muted">
                        <i class="bi bi-star-fill me-1" style="color: #194376;"></i>Great performance! Keep it up!
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>