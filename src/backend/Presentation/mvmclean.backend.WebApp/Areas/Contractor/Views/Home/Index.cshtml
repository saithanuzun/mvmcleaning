@model mvmclean.backend.WebApp.Areas.Contractor.Models.ContractorViewModel

@{
    ViewData["Title"] = "Contractor Home Page";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h3>Welcome to Your Home Page!</h3>
                </div>
                <div class="card-body">
                    <p class="lead">Here are your contractor details:</p>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item"><strong>Full Name:</strong> @Model.FullName</li>
                        <li class="list-group-item"><strong>Username:</strong> @Model.Username</li>
                        <li class="list-group-item"><strong>Email:</strong> @Model.Email</li>
                        <li class="list-group-item"><strong>Phone Number:</strong> @Model.PhoneNumber</li>
                    </ul>
                </div>
                <div class="card-footer text-muted text-center">
                    Have a great day, @Model.FullName!
                </div>
            </div>
        </div>
    </div>
</div>