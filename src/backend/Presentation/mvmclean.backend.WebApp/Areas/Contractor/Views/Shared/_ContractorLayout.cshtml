<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Admin Panel</title>
    <link href="/img/logo.png" rel="icon" type="image/png">

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    
    <style>

        /* Add these styles to your existing CSS */

        /* Base responsive adjustments */
        body {
            font-size: 14px;
        }

        .container-fluid {
            padding-right: 0;
            padding-left: 0;
        }

        /* Mobile-first sidebar adjustments */
        .sidebar {
            width: 100%;
            height: auto;
            position: relative;
            z-index: 1000;
        }

        @@media (min-width: 768px) {
        .sidebar {
            width: 225px;
            height: 100vh;
            position: fixed;
        }

        .offset-md-3 {
            margin-left: 225px;
        }

        .offset-lg-2 {
            margin-left: 225px;
        }
        }

        /* Mobile navbar adjustments */
        .navbar-nav .dropdown-menu {
            position: absolute;
            right: 0;
            left: auto;
        }

        @@media (max-width: 767.98px) {
        .navbar-nav {
            flex-direction: row;
            justify-content: flex-end;
        }

        .navbar-nav .nav-item {
            margin-left: 10px;
        }

        .navbar-nav .dropdown-menu {
            position: absolute;
            right: 0;
            left: auto;
            min-width: 250px;
        }
        }

        /* Main content area responsiveness */
        main {
            padding-top: 1rem;
            padding-bottom: 2rem;
        }

        @@media (max-width: 767.98px) {
        main {
            padding-left: 0.75rem;
            padding-right: 0.75rem;
            margin-left: 0 !important;
        }

        .px-md-4 {
            padding-left: 0.75rem !important;
            padding-right: 0.75rem !important;
        }

        .content-wrapper {
            min-height: auto;
            padding-bottom: 20px;
        }
        }

        /* Table responsiveness */
        .table-responsive {
            display: block;
            width: 100%;
            overflow-x: auto;
            -webkit-overflow-scrolling: touch;
        }

        /* Card and form responsiveness */
        .card {
            margin-bottom: 1rem;
        }

        .form-control, .form-select {
            font-size: 16px; /* Prevents iOS zoom on focus */
        }

        @@media (max-width: 767.98px) {
        .card-body {
            padding: 1rem;
        }

        .btn {
            width: 100%;
            margin-bottom: 0.5rem;
        }

        .btn-group .btn {
            width: auto;
            margin-bottom: 0;
        }
        }

        /* Breadcrumb responsiveness */
        .breadcrumb {
            flex-wrap: nowrap;
            overflow-x: auto;
            white-space: nowrap;
            padding: 0.75rem 1rem;
            background-color: transparent;
        }

        .breadcrumb-item {
            display: inline-block;
        }

        .breadcrumb::-webkit-scrollbar {
            display: none;
        }

        /* Fix for fixed sidebar on mobile */
        @@media (max-width: 767.98px) {
        .position-fixed {
            position: relative !important;
        }

        .vh-100 {
            height: auto !important;
        }
        }

        /* Quick actions dropdown on mobile */
        @@media (max-width: 767.98px) {
        .dropdown-menu {
            max-height: 300px;
            overflow-y: auto;
        }
        }

        /* Notification badge positioning fix */
        .position-relative {
            position: relative;
        }

        .badge {
            font-size: 0.65rem;
            padding: 0.25em 0.4em;
        }

        /* Sidebar collapse/expand for mobile */
        @@media (max-width: 767.98px) {
        .sidebar {
            max-height: 60px;
            overflow: hidden;
            transition: max-height 0.3s ease;
        }

        .sidebar.show {
            max-height: 1000px;
        }

        .navbar-toggler {
            display: block;
        }
        }

        /* Grid system adjustments for mobile */
        .row {
            margin-right: 0;
            margin-left: 0;
        }

        .col-md-9, .col-lg-10 {
            padding-right: 15px;
            padding-left: 15px;
        }

        /* Button group responsiveness */
        .btn-group {
            flex-wrap: wrap;
        }

        @@media (max-width: 767.98px) {
        .btn-group > .btn {
            flex: 1 0 auto;
            margin: 2px;
        }
        }

        /* Modal responsiveness */
        .modal-dialog {
            margin: 10px;
        }

        @@media (min-width: 576px) {
        .modal-dialog {
            max-width: 500px;
            margin: 30px auto;
        }
        }

        /* Padding and margin utilities for mobile */
        @@media (max-width: 767.98px) {
        .p-4 {
            padding: 1rem !important;
        }

        .p-3 {
            padding: 0.75rem !important;
        }

        .m-3 {
            margin: 0.75rem !important;
        }

        .mt-4 {
            margin-top: 1rem !important;
        }

        .mb-4 {
            margin-bottom: 1rem !important;
        }
        }

        /* Ensure images are responsive */
        img {
            max-width: 100%;
            height: auto;
        }

        /* Fix for iOS form elements */
        input, select, textarea {
            -webkit-appearance: none;
            border-radius: 0;
        }

        /* Touch-friendly tap targets */
        .nav-link, .dropdown-item, .btn {
            min-height: 44px;
            display: inline-flex;
            align-items: center;
        }

        @@media (max-width: 767.98px) {
        .nav-link {
            padding: 0.5rem 0.75rem;
        }
        }

        /* Hide/show elements based on screen size */
        .d-none.d-md-block {
            display: none !important;
        }

        @@media (min-width: 768px) {
        .d-none.d-md-block {
            display: block !important;
        }
        }

        /* Fix for sticky header on mobile */
        .sticky-top {
            position: -webkit-sticky;
            position: sticky;
            top: 0;
            z-index: 1020;
        }

        /* Improve readability on small screens */
        @@media (max-width: 767.98px) {
        h1 { font-size: 1.75rem; }
        h2 { font-size: 1.5rem; }
        h3 { font-size: 1.25rem; }
        h4 { font-size: 1.1rem; }
        h5 { font-size: 1rem; }
        h6 { font-size: 0.9rem; }
        }
        /* Custom colors */
        :root {
            --primary-color: #194376;    /* Dark blue */
            --secondary-color: #46C6CE;  /* Teal/cyan */
        }
        
        /* Override Bootstrap defaults */
        .bg-primary {
            background-color: var(--primary-color) !important;
        }
        
        .text-primary {
            color: var(--primary-color) !important;
        }
        
        .btn-primary {
            background-color: var(--primary-color) !important;
            border-color: var(--primary-color) !important;
        }
        
        .btn-primary:hover {
            background-color: #153760 !important;
            border-color: #153760 !important;
        }
        
        .bg-secondary {
            background-color: var(--secondary-color) !important;
        }
        
        .text-secondary {
            color: var(--secondary-color) !important;
        }
        
        .btn-secondary {
            background-color: var(--secondary-color) !important;
            border-color: var(--secondary-color) !important;
        }
        
        .btn-secondary:hover {
            background-color: #3ab4bb !important;
            border-color: #3ab4bb !important;
        }
        
        /* Warning and danger buttons - use complementary colors */
        .btn-warning {
            background-color: #f59e0b !important;
            border-color: #f59e0b !important;
        }
        
        .btn-warning:hover {
            background-color: #d97706 !important;
            border-color: #d97706 !important;
        }
        
        .btn-danger {
            background-color: #ef4444 !important;
            border-color: #ef4444 !important;
        }
        
        .btn-danger:hover {
            background-color: #dc2626 !important;
            border-color: #dc2626 !important;
        }
        
        /* Badge colors */
        .badge.bg-primary {
            background-color: var(--primary-color) !important;
        }
        
        .badge.bg-secondary {
            background-color: var(--secondary-color) !important;
        }
        
        /* Custom color classes */
        .bg-primary-custom {
            background-color: var(--primary-color) !important;
        }
        
        .bg-secondary-custom {
            background-color: var(--secondary-color) !important;
        }
        
        .btn-primary-custom {
            background-color: var(--primary-color);
            border-color: var(--primary-color);
        }
        
        .btn-primary-custom:hover {
            background-color: #153760;
            border-color: #153760;
        }
        
        .btn-secondary-custom {
            background-color: var(--secondary-color);
            border-color: var(--secondary-color);
        }
        
        .btn-secondary-custom:hover {
            background-color: #3ab4bb;
            border-color: #3ab4bb;
        }
        
        /* Gradient background option */
        .bg-gradient-custom {
            background-color: var(--primary-color);
        }
        
        /* Card styling */
        .card-header {
            background-color: var(--primary-color) !important;
            color: white !important;
        }
        
        /* Table styling */
        .table-light {
            background-color: #f8f9fa;
        }
        
        .table tbody tr:hover {
            background-color: #f8f9fa;
        }
        
        /* Make footer static at bottom */
        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }
        
        .container-fluid {
            flex: 1;
        }
        
        .content-wrapper {
            min-height: calc(100vh - 200px);
            padding-bottom: 100px;
        }
        
        /* Remove profile from navbar */
        .navbar-nav .nav-item.dropdown:last-child {
            display: none;
        }
        
        /* Alert styling */
        .alert-primary {
            background-color: var(--primary-color);
            border-color: var(--primary-color);
            color: white;
        }
        
        .alert-secondary {
            background-color: var(--secondary-color);
            border-color: var(--secondary-color);
            color: white;
        }
    </style>
    
    @RenderSection("styles", required: false)
</head>
<body class="bg-light">
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar - Updated with primary color -->
            <nav class="col-md-3 col-lg-2 d-md-block bg-primary-custom sidebar vh-100 position-fixed">
                <div class="position-sticky pt-3">
                    <div class="px-3 pb-3 mb-3 border-bottom border-white border-opacity-25">
                        <h4 class="text-white">
                            <i class="bi bi-speedometer2"></i> Contractor Panel
                        </h4>
                    </div>
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link text-white rounded mx-2 @(ViewContext.RouteData.Values["Controller"].ToString() == "Home" ? "active bg-secondary-custom" : "text-opacity-75")" href="@Url.Action("Index", "Home")">
                                <i class="bi bi-house-door me-2"></i> Dashboard
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white rounded mx-2 @(ViewContext.RouteData.Values["Controller"].ToString() == "Profile" ? "active bg-secondary-custom" : "text-opacity-75")" href="@Url.Action("Index", "Profile")">
                                <i class="bi bi-person-circle me-2"></i> My Profile
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white rounded mx-2 @(ViewContext.RouteData.Values["Controller"].ToString() == "Bookings" ? "active bg-secondary-custom" : "text-opacity-75")" href="@Url.Action("Index", "Bookings")">
                                <i class="bi bi-calendar-check me-2"></i> My Bookings
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white rounded mx-2 @(ViewContext.RouteData.Values["Controller"].ToString() == "Services" ? "active bg-secondary-custom" : "text-opacity-75")" href="@Url.Action("Index", "Services")">
                                <i class="bi bi-box me-2"></i> Services
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white rounded mx-2 @(ViewContext.RouteData.Values["Controller"].ToString() == "Coverage" ? "active bg-secondary-custom" : "text-opacity-75")" href="@Url.Action("Index", "Coverage")">
                                <i class="bi bi-geo-alt me-2"></i> Coverage Areas
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white rounded mx-2 @(ViewContext.RouteData.Values["Controller"].ToString() == "Availability" ? "active bg-secondary-custom" : "text-opacity-75")" href="@Url.Action("Index", "Availability")">
                                <i class="bi bi-calendar me-2"></i> Availability
                            </a>
                        </li>
                        <!-- Availability Sub-menu -->
                        @if (ViewContext.RouteData.Values["Controller"].ToString() == "Availability")
                        {
                            <ul class="nav flex-column ms-3">
                                <li class="nav-item">
                                    <a class="nav-link text-white text-opacity-75 rounded mx-2 py-1" href="@Url.Action("Calendar", "Availability")">
                                        <i class="bi bi-calendar3 me-2"></i> <small>Calendar View</small>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-white text-opacity-75 rounded mx-2 py-1" href="@Url.Action("WorkingDays", "Availability")">
                                        <i class="bi bi-clock me-2"></i> <small>Working Days</small>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-white text-opacity-75 rounded mx-2 py-1" href="@Url.Action("Unavailability", "Availability")">
                                        <i class="bi bi-calendar-x me-2"></i> <small>Unavailability</small>
                                    </a>
                                </li>
                            </ul>
                        }
                        <li class="nav-item">
                            <a class="nav-link text-white rounded mx-2 @(ViewContext.RouteData.Values["Controller"].ToString() == "Invoices" ? "active bg-secondary-custom" : "text-opacity-75")" href="@Url.Action("Index", "Invoices")">
                                <i class="bi bi-receipt me-2"></i> Invoices
                            </a>
                        </li>
                        <li class="nav-item mt-4">
                            <form method="post" action="@Url.Action("Logout", "Account")" style="display: inline;">
                                <button type="submit" class="nav-link text-white text-opacity-75 rounded mx-2 btn btn-link" style="border: none; padding: 0.5rem 0; text-decoration: none; cursor: pointer;">
                                    <i class="bi bi-box-arrow-right me-2"></i> Logout
                                </button>
                            </form>
                        </li>
                    </ul>
                </div>
            </nav>

            <!-- Main Content -->
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 offset-md-3 offset-lg-2">
                <!-- Top Navbar - Updated with secondary color -->
                <nav class="navbar navbar-expand-lg navbar-light bg-secondary-custom shadow-sm mb-4 sticky-top">
                    <div class="container-fluid">
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        
                        <div class="collapse navbar-collapse" id="navbarNav">
                            <ul class="navbar-nav ms-auto">
                                <!-- Quick Actions Dropdown -->
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle text-white" href="#" id="quickActionsDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="bi bi-lightning-fill"></i> Quick Actions
                                    </a>
                                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="quickActionsDropdown">
                                        <li>
                                            <h6 class="dropdown-header">
                                                <i class="bi bi-calendar-check"></i> Availability
                                            </h6>
                                        </li>
                                        <li><a class="dropdown-item" href="@Url.Action("Calendar", "Availability")">
                                            <i class="bi bi-calendar3"></i> View Calendar
                                        </a></li>
                                        <li><a class="dropdown-item" href="@Url.Action("WorkingDays", "Availability")">
                                            <i class="bi bi-clock"></i> Manage Working Days
                                        </a></li>
                                        <li><a class="dropdown-item" href="@Url.Action("Unavailability", "Availability")">
                                            <i class="bi bi-calendar-x"></i> Add Unavailability
                                        </a></li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li>
                                            <h6 class="dropdown-header">
                                                <i class="bi bi-list-ul"></i> Quick Links
                                            </h6>
                                        </li>
                                        <li><a class="dropdown-item" href="@Url.Action("Index", "Bookings")">
                                            <i class="bi bi-calendar-check"></i> My Bookings
                                        </a></li>
                                        <li><a class="dropdown-item" href="@Url.Action("Index", "Services")">
                                            <i class="bi bi-box"></i> My Services
                                        </a></li>
                                        <li><a class="dropdown-item" href="@Url.Action("Index", "Coverage")">
                                            <i class="bi bi-geo-alt"></i> Coverage Areas
                                        </a></li>
                                        <li><a class="dropdown-item" href="@Url.Action("Index", "Profile")">
                                            <i class="bi bi-person-circle"></i> My Profile
                                        </a></li>
                                    </ul>
                                </li>
                                <!-- Notification -->
                                <li class="nav-item dropdown">
                                    <a class="nav-link position-relative text-white" href="#" data-bs-toggle="dropdown">
                                        <i class="bi bi-bell fs-5"></i>
                                        <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-primary-custom">
                                            3
                                        </span>
                                    </a>
                                    <ul class="dropdown-menu dropdown-menu-end">
                                        <li><h6 class="dropdown-header">Notifications</h6></li>
                                        <li><a class="dropdown-item" href="#"><i class="bi bi-cart me-2"></i>New order received</a></li>
                                        <li><a class="dropdown-item" href="#"><i class="bi bi-person me-2"></i>New user registered</a></li>
                                        <li><a class="dropdown-item" href="#"><i class="bi bi-exclamation-triangle me-2"></i>Server status alert</a></li>
                                    </ul>
                                </li>
                            </ul>
                        </div>
                    </div>
                </nav>

                <!-- Breadcrumb -->
                <nav aria-label="breadcrumb" class="mt-3">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Home</a></li>
                        <li class="breadcrumb-item active" aria-current="page">@ViewBag.Title</li>
                    </ol>
                </nav>

                <!-- Main Content Area - RenderBody -->
                <div class="content-wrapper">
                    @RenderBody()
                </div>

               
            </main>
        </div>
    </div>

    <!-- Bootstrap 5 JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>