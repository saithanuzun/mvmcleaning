@using mvmclean.backend.Application.Features.Services

@model List<GetAllServicesResponse>

@{
    ViewData["Title"] = "Services";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-md-12">
            <h2 class="mb-4">
                <i class="bi bi-box"></i> Available Services
            </h2>
        </div>
    </div>

    @if (Model == null || Model.Count == 0)
    {
        <div class="alert alert-info" role="alert">
            <i class="bi bi-info-circle"></i> No services available at the moment.
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var service in Model)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card shadow-sm h-100">
                        <div class="card-body">
                            <h5 class="card-title">@service.Name</h5>
                            <p class="card-text text-muted">@service.Description</p>
                            
                            @if (!string.IsNullOrEmpty(service.CategoryName))
                            {
                                <p>
                                    <span class="badge bg-primary">@service.CategoryName</span>
                                </p>
                            }
                            
                            <p class="text-primary">
                                <strong>Base Price: @service.BasePrice.ToString("C")</strong>
                            </p>
                        </div>
                        <div class="card-footer bg-light">
                            <a href="@Url.Action("Details", "Services", new { serviceId = service.ServiceId })" class="btn btn-sm btn-primary w-100">
                                <i class="bi bi-eye"></i> View Details
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
