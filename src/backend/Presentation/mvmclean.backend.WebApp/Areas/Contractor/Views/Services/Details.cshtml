@using mvmclean.backend.Application.Features.Services.Queries

@model GetServiceByIdResponse

@{
    ViewData["Title"] = "Service Details";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-md-12">
            <h2 class="mb-4">
                <i class="bi bi-box"></i> Service Details
            </h2>
            <a href="@Url.Action("Index", "Services")" class="btn btn-secondary mb-3">
                <i class="bi bi-arrow-left"></i> Back to Services
            </a>
        </div>
    </div>

    @if (Model != null)
    {
        <div class="row">
            <div class="col-md-8">
                <div class="card shadow-sm">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">@Model.Name</h5>
                    </div>
                    <div class="card-body">
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label class="form-label"><strong>Category</strong></label>
                                <p class="text-muted">@Model.CategoryName</p>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label"><strong>Service ID</strong></label>
                                <p class="text-muted"><code>@Model.ServiceId.ToString().Substring(0, 8)</code></p>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label"><strong>Description</strong></label>
                            <p class="text-muted">@Model.Description</p>
                        </div>

                        <div class="mb-3">
                            <label class="form-label"><strong>Duration</strong></label>
                            <p class="text-muted">@Model.Duration minutes</p>
                        </div>
                    </div>
                </div>

                <div class="card shadow-sm mt-4">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">Pricing Information</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <label class="form-label"><strong>Base Price</strong></label>
                                <p class="lead text-primary">
                                    <strong>@Model.BasePrice.ToString("C")</strong>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card shadow-sm">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">Quick Info</h5>
                    </div>
                    <div class="card-body">
                        <p><strong>Status:</strong> <span class="badge bg-primary">Active</span></p>
                        <p><strong>Service ID:</strong> <code>@Model.ServiceId</code></p>
                        <p class="text-muted small">Learn more about this service or contact us for customized pricing.</p>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-warning">Service not found.</div>
    }
</div>
