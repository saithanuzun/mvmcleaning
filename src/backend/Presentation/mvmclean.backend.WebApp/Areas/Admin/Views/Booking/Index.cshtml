@{
    ViewData["Title"] = "Booking Management";
}

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col">
            <h2 class="fw-bold">Booking Management</h2>
            <p class="text-muted">Manage customer bookings and assignments</p>
        </div>
    </div>

    <div class="row g-3">
        <!-- All Bookings -->
        <div class="col-md-4">
            <a href="@Url.Action("AllBookings", "Booking", new { area = "Admin" })"
               class="btn btn-primary w-100 py-3">
                View All Bookings
            </a>
        </div>

        <!-- Create Booking -->
        <div class="col-md-4">
            <a href="/Admin/Booking/Create"
               class="btn btn-success w-100 py-3">
                Create Booking
            </a>
        </div>
    </div>
</div>