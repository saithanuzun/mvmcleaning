@using mvmclean.backend.Application.Features.Contractor.Queries

@model GetContractorByIdResponse

@{
    ViewData["Title"] = "Contractor Details";
}

<div class="container-fluid mt-4">
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row mb-4">
        <div class="col-md-12">
            <h2 class="mb-4">
                <i class="bi bi-person-badge"></i> Contractor Details
            </h2>
            <div class="btn-group" role="group">
                <a href="@Url.Action("AllContractors", "Contractor")" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Back to Contractors
                </a>
                <a href="@Url.Action("Services", "Contractor", new { contractorId = Model != null ? "" : "" })" class="btn btn-primary">
                    <i class="bi bi-briefcase"></i> Services
                </a>
                <a href="@Url.Action("Coverage", "Contractor", new { contractorId = Model != null ? "" : "" })" class="btn btn-primary">
                    <i class="bi bi-geo-alt"></i> Coverage
                </a>
                <a href="@Url.Action("Availability", "Contractor", new { contractorId = Model != null ? "" : "" })" class="btn btn-primary">
                    <i class="bi bi-calendar3"></i> Availability
                </a>
            </div>
        </div>
    </div>

    @if (Model != null)
    {
        <div class="row">
            <div class="col-md-8">
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">Personal Information</h5>
                    </div>
                    <div class="card-body">
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label class="form-label"><strong>Full Name</strong></label>
                                <p class="text-muted">@Model.FullName</p>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label"><strong>Username</strong></label>
                                <p class="text-muted">@Model.Username</p>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label class="form-label"><strong>Email</strong></label>
                                <p class="text-muted">@Model.Email</p>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label"><strong>Phone</strong></label>
                                <p class="text-muted">@Model.PhoneNumber</p>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-12">
                                <label class="form-label"><strong>Account Status</strong></label>
                                <p>
                                    @if (Model.IsActive)
                                    {
                                        <span class="badge bg-success">
                                            <i class="bi bi-check-circle-fill"></i> Active
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">
                                            <i class="bi bi-x-circle-fill"></i> Inactive
                                        </span>
                                    }
                                </p>
                            </div>
                        </div>
                    </div>
                </div>

                @if (Model.Services != null && Model.Services.Count > 0)
                {
                    <div class="card shadow-sm mb-4">
                        <div class="card-header bg-primary text-white">
                            <h5 class="mb-0">Services Provided</h5>
                        </div>
                        <div class="card-body">
                            <ul class="list-group list-group-flush">
                                @foreach (var service in Model.Services.Take(5))
                                {
                                    <li class="list-group-item">
                                        <strong>@service.ServiceName</strong>
                                        <br />
                                        <small class="text-muted">@service.Category - @service.Description</small>
                                    </li>
                                }
                                @if (Model.Services.Count > 5)
                                {
                                    <li class="list-group-item text-muted">
                                        <em>+@(Model.Services.Count - 5) more service(s)</em>
                                    </li>
                                }
                            </ul>
                        </div>
                    </div>
                }

                @if (Model.CoverageAreas != null && Model.CoverageAreas.Count > 0)
                {
                    <div class="card shadow-sm mb-4">
                        <div class="card-header bg-primary text-white">
                            <h5 class="mb-0">Coverage Areas</h5>
                        </div>
                        <div class="card-body">
                            <ul class="list-group list-group-flush">
                                @foreach (var area in Model.CoverageAreas.Take(5))
                                {
                                    <li class="list-group-item">
                                        <i class="bi bi-geo-alt-fill" style="color: #46C6CE;"></i>
                                        @area.Postcode
                                    </li>
                                }
                                @if (Model.CoverageAreas.Count > 5)
                                {
                                    <li class="list-group-item text-muted">
                                        <em>+@(Model.CoverageAreas.Count - 5) more area(s)</em>
                                    </li>
                                }
                            </ul>
                        </div>
                    </div>
                }

                @if (Model.Reviews != null && Model.Reviews.Count > 0)
                {
                    <div class="card shadow-sm">
                        <div class="card-header bg-warning text-dark">
                            <h5 class="mb-0">
                                <i class="bi bi-star-fill"></i> Customer Reviews
                            </h5>
                        </div>
                        <div class="card-body">
                            @foreach (var review in Model.Reviews.OrderByDescending(r => r.CreatedAt).Take(5))
                            {
                                <div class="mb-3 pb-3 border-bottom">
                                    <div class="d-flex justify-content-between align-items-start mb-2">
                                        <div>
                                            @for (int i = 1; i <= 5; i++)
                                            {
                                                if (i <= review.Rating)
                                                {
                                                    <i class="bi bi-star-fill text-warning"></i>
                                                }
                                                else
                                                {
                                                    <i class="bi bi-star text-muted"></i>
                                                }
                                            }
                                            <span class="ms-2 badge bg-primary">@review.Rating/5</span>
                                        </div>
                                        <small class="text-muted">@review.CreatedAt.ToString("MMM dd, yyyy")</small>
                                    </div>
                                    <p class="mb-0">@review.Comment</p>
                                </div>
                            }
                            @if (Model.Reviews.Count > 5)
                            {
                                <p class="text-muted text-center mb-0">
                                    <em>Showing 5 of @Model.Reviews.Count reviews</em>
                                </p>
                            }
                        </div>
                    </div>
                }
            </div>

            <div class="col-md-4">
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-secondary text-white">
                        <h5 class="mb-0">Summary</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label class="text-muted"><small>Services</small></label>
                            <p class="h5 mb-0">
                                <span class="badge bg-primary">@(Model.Services?.Count ?? 0)</span>
                            </p>
                        </div>
                        <div class="mb-3">
                            <label class="text-muted"><small>Coverage Areas</small></label>
                            <p class="h5 mb-0">
                                <span class="badge bg-info">@(Model.CoverageAreas?.Count ?? 0)</span>
                            </p>
                        </div>
                        <div class="mb-3">
                            <label class="text-muted"><small>Reviews</small></label>
                            <p class="h5 mb-0">
                                <span class="badge bg-success">@(Model.Reviews?.Count ?? 0)</span>
                            </p>
                        </div>
                        <div class="mb-3">
                            <label class="text-muted"><small>Working Hours</small></label>
                            <p class="h5 mb-0">
                                <span class="badge bg-warning">@(Model.WorkingHours?.Count ?? 0)</span>
                            </p>
                        </div>
                        <div class="mb-3">
                            <label class="text-muted"><small>Unavailable Slots</small></label>
                            <p class="h5 mb-0">
                                <span class="badge bg-danger">@(Model.UnavailableSlots?.Count ?? 0)</span>
                            </p>
                        </div>
                        <hr />
                        @if (Model.IsActive)
                        {
                            <form asp-area="Admin" asp-controller="Contractor" asp-action="Deactivate" asp-route-contractorId="@ViewContext.RouteData.Values["contractorId"]" method="post" onsubmit="return confirm('Are you sure you want to deactivate this contractor?');">
                                <button type="submit" class="btn btn-danger w-100">
                                    <i class="bi bi-exclamation-triangle"></i> Deactivate
                                </button>
                            </form>
                        }
                        else
                        {
                            <form asp-area="Admin" asp-controller="Contractor" asp-action="Activate" asp-route-contractorId="@ViewContext.RouteData.Values["contractorId"]" method="post">
                                <button type="submit" class="btn btn-success w-100">
                                    <i class="bi bi-check-circle"></i> Activate
                                </button>
                            </form>
                        }
                    </div>
                </div>

                @if (Model.WorkingHours != null && Model.WorkingHours.Any(h => h.IsWorkingDay))
                {
                    <div class="card shadow-sm">
                        <div class="card-header bg-secondary text-white">
                            <h5 class="mb-0">Working Hours</h5>
                        </div>
                        <div class="card-body">
                            <ul class="list-group list-group-flush">
                                @foreach (var hours in Model.WorkingHours.Where(h => h.IsWorkingDay).OrderBy(h => h.DayOfWeek).Take(7))
                                {
                                    <li class="list-group-item d-flex justify-content-between">
                                        <strong>@hours.DayOfWeek</strong>
                                        <small class="text-muted">@hours.StartTime.ToString("hh:mm tt") - @hours.EndTime.ToString("hh:mm tt")</small>
                                    </li>
                                }
                            </ul>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-warning">
            Contractor not found.
        </div>
    }
</div>
