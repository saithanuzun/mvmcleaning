@model mvmclean.backend.Application.Features.Contractor.Queries.GetAllContractorsResponse

@{
    ViewData["Title"] = "All Contractors";
}

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="mb-1">
                        <i class="bi bi-people"></i> Contractors Management
                    </h2>
                    <p class="text-muted mb-0">Manage all contractors and their details</p>
                </div>
            </div>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">
                <i class="bi bi-list-check"></i> All Contractors
                <span class="badge bg-light text-dark float-end">@Model?.Contractors?.Count ?? 0</span>
            </h5>
        </div>
        <div class="card-body p-0">
            @if (Model?.Contractors?.Any() == true)
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0 align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>Full Name</th>
                                <th>Username</th>
                                <th>Email</th>
                                <th>Phone</th>
                                <th>Status</th>
                                <th>Services</th>
                                <th class="text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var contractor in Model.Contractors)
                            {
                                <tr>
                                    <td class="fw-semibold">@contractor.FullName</td>
                                    <td>@contractor.Username</td>
                                    <td>@contractor.Email</td>
                                    <td>@contractor.PhoneNumber</td>
                                    <td>
                                        <span class="badge bg-@(contractor.IsActive ? "success" : "danger")">
                                            @(contractor.IsActive ? "Active" : "Inactive")
                                        </span>
                                    </td>
                                    <td class="text-center">
                                        <span class="badge bg-info">@contractor.ServiceCount</span>
                                    </td>
                                    <td class="text-center">
                                        <a href="/Admin/Contractor/Details/@contractor.Id" class="btn btn-sm btn-outline-primary"
                                            title="View Details">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        @if (contractor.IsActive)
                                        {
                                            <form action="/Admin/Contractor/Deactivate/@contractor.Id" method="post" style="display:inline;">
                                                <input type="hidden" name="__RequestVerificationToken" value="" />
                                                <button type="submit" class="btn btn-sm btn-outline-danger" title="Deactivate">
                                                    <i class="bi bi-x-circle"></i>
                                                </button>
                                            </form>
                                        }
                                        else
                                        {
                                            <form action="/Admin/Contractor/Activate/@contractor.Id" method="post" style="display:inline;">
                                                <input type="hidden" name="__RequestVerificationToken" value="" />
                                                <button type="submit" class="btn btn-sm btn-outline-success" title="Activate">
                                                    <i class="bi bi-check-circle"></i>
                                                </button>
                                            </form>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="p-4 text-center text-muted">
                    <i class="bi bi-inbox" style="font-size: 2rem;"></i>
                    <p class="mt-2">No contractors found</p>
                </div>
            }
        </div>
    </div>
</div>