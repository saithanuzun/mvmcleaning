@model mvmclean.backend.Application.Features.Invoice.GetAllInvoicesResponse

@{
    ViewData["Title"] = "All Invoices";
}

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h2 class="mb-1">
                <i class="bi bi-receipt"></i> Invoices Management
            </h2>
            <p class="text-muted mb-0">Manage all customer invoices</p>
        </div>

        <div class="col-md-4 text-end">
            <a asp-area="Admin" asp-controller="Invoice" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create Invoice
            </a>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card border-0 shadow-sm">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">
                <i class="bi bi-list-check"></i> All Invoices
                <span class="badge bg-light text-dark float-end">@Model?.Invoices?.Count ?? 0</span>
            </h5>
        </div>
        <div class="card-body p-0">
            @if (Model?.Invoices?.Any() == true)
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0 align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>Invoice #</th>
                                <th>Customer</th>
                                <th>Issue Date</th>
                                <th>Due Date</th>
                                <th>Subtotal</th>
                                <th>Discount</th>
                                <th class="text-end">Total</th>
                                <th>Paid Date</th>
                                <th>Status</th>
                                <th class="text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var invoice in Model.Invoices)
                            {
                                <tr class="@(invoice.IsOverdue ? "table-danger" : "")">
                                    <td class="fw-semibold">@invoice.InvoiceNumber</td>
                                    <td>@invoice.CustomerId</td>
                                    <td>@invoice.IssueDate.ToString("dd/MM/yyyy")</td>
                                    <td>@invoice.DueDate.ToString("dd/MM/yyyy")</td>
                                    <td>£@invoice.Subtotal.ToString("0.00")</td>
                                    <td>
                                        @if (invoice.DiscountAmount > 0)
                                        {
                                            <span>-£@invoice.DiscountAmount.ToString("0.00")</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td class="fw-bold text-end">£@invoice.TotalAmount.ToString("0.00")</td>
                                    <td>
                                        @if (invoice.PaidDate.HasValue)
                                        {
                                            <span>@invoice.PaidDate?.ToString("dd/MM/yyyy")</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        <span class="badge bg-@invoice.StatusBadgeClass">@invoice.Status</span>
                                        @if (invoice.IsOverdue)
                                        {
                                            <span class="badge bg-danger ms-1">OVERDUE</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <a asp-area="Admin" asp-controller="Invoice" asp-action="Details"
                                            asp-route-invoiceId="@invoice.Id" class="btn btn-sm btn-outline-primary"
                                            title="View Details">
                                            <i class="bi bi-eye"></i> View
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="p-4 text-center text-muted">
                    <i class="bi bi-inbox" style="font-size: 2rem;"></i>
                    <p class="mt-2">No invoices found</p>
                </div>
            }
        </div>
    </div>
</div>
