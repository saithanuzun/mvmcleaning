@model mvmclean.backend.Application.Features.Invoice.Queries.GetInvoiceByIdResponse

@{
    ViewData["Title"] = "Invoice Details";
}

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-md-12">
            <h2 class="mb-4">
                <i class="bi bi-receipt"></i> Invoice Details
            </h2>
            <div class="btn-group" role="group">
                <a asp-area="Admin" asp-controller="Invoice" asp-action="AllInvoices" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Back to Invoices
                </a>
                <button class="btn btn-info" disabled title="Coming soon">
                    <i class="bi bi-download"></i> Download
                </button>
                <button class="btn btn-warning" disabled title="Coming soon">
                    <i class="bi bi-pencil"></i> Edit
                </button>
                <button class="btn btn-danger" disabled title="Coming soon">
                    <i class="bi bi-trash"></i> Delete
                </button>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Invoice Information</h5>
                </div>

                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="text-muted"><small>Invoice Number</small></label>
                            <p class="h5 fw-bold">@Model.InvoiceNumber</p>
                        </div>
                        <div class="col-md-6">
                            <label class="text-muted"><small>Invoice ID</small></label>
                            <p class="fw-semibold font-monospace">@Model.Id</p>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="text-muted"><small>Status</small></label>
                            <p>
                                <span class="badge bg-primary">@Model.Status</span>
                            </p>
                        </div>
                        <div class="col-md-6">
                            <label class="text-muted"><small>Created Date</small></label>
                            <p>@Model.CreatedAt.ToString("dd/MM/yyyy")</p>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-12">
                            <label class="text-muted"><small>Description</small></label>
                            <p>@Model.Description</p>
                        </div>
                    </div>

                    <hr />

                    <div class="row">
                        <div class="col-12">
                            <label class="text-muted"><small>Total Amount</small></label>
                            <p class="h4 fw-bold text-success">@Model.Currency @Model.Amount.ToString("0.00")</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-secondary text-white">
                    <h6 class="mb-0">
                        <i class="bi bi-info-circle"></i> Invoice Summary
                    </h6>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <small class="text-muted">Subtotal</small>
                        <p class="mb-0">£0.00</p>
                    </div>
                    <div class="mb-3">
                        <small class="text-muted">Discount</small>
                        <p class="mb-0">-£0.00</p>
                    </div>
                    <hr />
                    <div>
                        <small class="text-muted">Total</small>
                        <p class="h5 fw-bold">@Model.Currency @Model.Amount.ToString("0.00")</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
