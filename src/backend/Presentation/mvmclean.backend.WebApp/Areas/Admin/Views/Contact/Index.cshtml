@using mvmclean.backend.Application.Features.Contact.Queries
@model List<ContactDto>

@{
    ViewData["Title"] = "Manage Contacts";
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12 d-flex justify-content-between align-items-center">
            <div>
                <h2>Contact Form Submissions</h2>
                <p class="text-muted">Manage customer inquiries and contact form submissions</p>
            </div>
            <a href="@Url.Action("Create")" class="btn btn-primary">
                <i class="fas fa-plus"></i> New Contact
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">All Contacts (@Model.Count)</h5>
                </div>
                <div class="card-body p-0">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Name</th>
                                        <th>Email</th>
                                        <th>Phone</th>
                                        <th>Subject</th>
                                        <th>Status</th>
                                        <th>Messages</th>
                                        <th>Submitted</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var contact in Model)
                                    {
                                        <tr>
                                            <td><strong>@contact.FullName</strong></td>
                                            <td><a href="mailto:@contact.Email">@contact.Email</a></td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(contact.PhoneNumber))
                                                {
                                                    <a href="tel:@contact.PhoneNumber">@contact.PhoneNumber</a>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                            <td>@contact.Subject</td>
                                            <td>
                                                @switch (contact.Status)
                                                {
                                                    case "New":
                                                        <span class="badge bg-danger">New</span>
                                                        break;
                                                    case "Read":
                                                        <span class="badge bg-warning">Read</span>
                                                        break;
                                                    case "Responded":
                                                        <span class="badge bg-info">Responded</span>
                                                        break;
                                                    case "Resolved":
                                                        <span class="badge bg-success">Resolved</span>
                                                        break;
                                                    case "Closed":
                                                        <span class="badge bg-secondary">Closed</span>
                                                        break;
                                                }
                                            </td>
                                            <td>
                                                <span class="badge bg-light text-dark">@contact.MessageCount</span>
                                            </td>
                                            <td>@contact.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                                            <td>
                                                <a href="@Url.Action("Detail", new { id = contact.Id })" class="btn btn-sm btn-primary">
                                                    <i class="fas fa-eye"></i> View
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="p-4 text-center text-muted">
                            <p>No contacts found. <a href="@Url.Action("Create")">Create a new one</a></p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .table-hover tbody tr:hover {
        background-color: #f9f9f9;
    }

    .badge {
        font-size: 0.85rem;
        padding: 0.4rem 0.7rem;
    }
</style>
