@{
    ViewData["Title"] = "Support Ticket Management";
}

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col">
            <h2 class="fw-bold">
                <i class="bi bi-life-preserver"></i> Support Ticket Management
            </h2>
            <p class="text-muted">Manage customer support requests and tickets</p>
        </div>
    </div>

    <div class="row g-3">
        <!-- All Tickets -->
        <div class="col-md-6">
            <div class="card shadow-sm h-100">
                <div class="card-body text-center p-4">
                    <i class="bi bi-ticket-detailed display-4 text-primary mb-3"></i>
                    <h5 class="card-title">All Support Tickets</h5>
                    <p class="card-text text-muted">View and manage all customer support tickets</p>
                    <a href="@Url.Action("AllTickets", "SupportTicket", new { area = "Admin" })"
                       class="btn btn-primary w-100 mt-2">
                        <i class="bi bi-eye"></i> View All Tickets
                    </a>
                </div>
            </div>
        </div>

        <!-- Ticket Stats -->
        <div class="col-md-6">
            <div class="card shadow-sm h-100">
                <div class="card-body text-center p-4">
                    <i class="bi bi-graph-up display-4 text-success mb-3"></i>
                    <h5 class="card-title">Ticket Statistics</h5>
                    <p class="card-text text-muted">View ticket resolution metrics</p>
                    <button class="btn btn-secondary w-100 mt-2" disabled>
                        <i class="bi bi-bar-chart"></i> View Statistics (Coming Soon)
                    </button>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-info-circle"></i> Quick Actions
                    </h5>
                </div>
                <div class="card-body">
                    <div class="list-group">
                        <a href="@Url.Action("AllTickets", "SupportTicket", new { area = "Admin" })" class="list-group-item list-group-item-action">
                            <div class="d-flex w-100 justify-content-between">
                                <h6 class="mb-1"><i class="bi bi-ticket-detailed"></i> View All Tickets</h6>
                                <small class="text-muted"><i class="bi bi-chevron-right"></i></small>
                            </div>
                            <p class="mb-1 text-muted">Browse all support tickets and their status</p>
                        </a>
                        <div class="list-group-item list-group-item-action disabled">
                            <div class="d-flex w-100 justify-content-between">
                                <h6 class="mb-1"><i class="bi bi-funnel"></i> Filter Tickets</h6>
                                <small class="text-muted">Coming Soon</small>
                            </div>
                            <p class="mb-1 text-muted">Filter tickets by status, priority, or date</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
