@model mvmclean.backend.Application.Features.SupportTicket.Queries.GetSupportTicketByIdResponse

@{
    ViewData["Title"] = "Support Ticket Answer";
}

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-md-12">
            <h2 class="mb-4">
                <i class="bi bi-chat-left-text"></i> Ticket Answer
            </h2>
            <div class="btn-group" role="group">
                <a asp-area="Admin" asp-controller="SupportTicket" asp-action="AllTickets" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Back to Tickets
                </a>
                <a asp-area="Admin" asp-controller="SupportTicket" asp-action="Details" 
                    asp-route-ticketId="@Model.Id" class="btn btn-outline-primary">
                    <i class="bi bi-eye"></i> View Full Ticket
                </a>
            </div>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        <div class="col-lg-8">
            <!-- Ticket Information -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-info-circle"></i> Ticket Information
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="text-muted"><small>Ticket ID</small></label>
                            <p class="fw-semibold font-monospace">@Model.Id</p>
                        </div>
                        <div class="col-md-6">
                            <label class="text-muted"><small>Status</small></label>
                            <p>
                                <span class="badge bg-primary">@Model.Status</span>
                            </p>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-12">
                            <label class="text-muted"><small>Subject</small></label>
                            <p class="fw-semibold">@Model.Subject</p>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-12">
                            <label class="text-muted"><small>Description</small></label>
                            <p class="bg-light p-3 rounded">@Model.Description</p>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <label class="text-muted"><small>Customer ID</small></label>
                            <p class="font-monospace text-muted">@Model.CustomerId</p>
                        </div>
                        <div class="col-md-6">
                            <label class="text-muted"><small>Created</small></label>
                            <p>@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Messages/Conversation Thread -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-chat-dots"></i> Conversation Thread (@Model.Messages?.Count ?? 0 messages)
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model?.Messages?.Any() == true)
                    {
                        <div class="chat-messages mb-4" style="max-height: 500px; overflow-y: auto;">
                            @foreach (var message in Model.Messages.OrderBy(m => m.CreatedAt))
                            {
                                <div class="mb-3 p-3 rounded @(message.IsInternalNote ? "bg-warning bg-opacity-10 border border-warning-subtle" : "bg-light")">
                                    <div class="d-flex justify-content-between mb-2">
                                        <strong>@message.SenderName</strong>
                                        @if (message.IsInternalNote)
                                        {
                                            <span class="badge bg-warning text-dark">Internal Note</span>
                                        }
                                    </div>
                                    <p class="text-muted small mb-2">@message.CreatedAt.ToString("dd/MM/yyyy HH:mm:ss")</p>
                                    <p class="mb-0">@message.Content</p>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-muted text-center py-4">No messages yet</p>
                    }
                </div>
            </div>

            <!-- Add Message Form -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-pencil-square"></i> Add Response
                    </h5>
                </div>
                <div class="card-body">
                    <form asp-area="Admin" asp-controller="SupportTicket" asp-action="AddMessage" method="post">
                        <input type="hidden" name="ticketId" value="@Model.Id" />
                        
                        <div class="mb-3">
                            <label for="message" class="form-label">Your Message</label>
                            <textarea class="form-control" id="message" name="message" rows="5" 
                                placeholder="Enter your response to the customer..." required></textarea>
                            <small class="text-muted">Provide a detailed response to address the customer's issue.</small>
                        </div>

                        <div class="mb-3 form-check">
                            <input type="checkbox" class="form-check-input" id="isInternalNote" 
                                name="isInternalNote" value="true">
                            <label class="form-check-label" for="isInternalNote">
                                Mark as Internal Note (not visible to customer)
                            </label>
                        </div>

                        <div class="d-grid gap-2 d-sm-flex">
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-send"></i> Send Response
                            </button>
                            <a href="javascript:history.back()" class="btn btn-outline-secondary">
                                <i class="bi bi-x-circle"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Sidebar -->
        <div class="col-lg-4">
            <!-- Assignment Card -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-person-check"></i> Assignment
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.AssignedToId.HasValue)
                    {
                        <p class="mb-0">
                            <strong>Assigned To:</strong><br>
                            @Model.AssignedToName
                        </p>
                    }
                    else
                    {
                        <p class="text-muted mb-0">
                            <i class="bi bi-info-circle"></i> Not assigned yet
                        </p>
                    }
                </div>
            </div>

            <!-- Ticket Details Card -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-dark text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-file-text"></i> Details
                    </h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="text-muted"><small>Booking ID</small></label>
                        @if (Model.BookingId.HasValue)
                        {
                            <p class="font-monospace">@Model.BookingId</p>
                        }
                        else
                        {
                            <p class="text-muted">-</p>
                        }
                    </div>
                    <div class="mb-3">
                        <label class="text-muted"><small>Last Updated</small></label>
                        @if (Model.UpdatedAt.HasValue)
                        {
                            <p>@Model.UpdatedAt.Value.ToString("dd/MM/yyyy HH:mm")</p>
                        }
                        else
                        {
                            <p class="text-muted">Not updated</p>
                        }
                    </div>
                </div>
            </div>

            <!-- Actions Card -->
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0">
                        <i class="bi bi-tools"></i> Actions
                    </h5>
                </div>
                <div class="card-body">
                    <a href="@Url.Action("Details", "SupportTicket", new { area = "Admin", ticketId = Model.Id })" 
                        class="btn btn-outline-primary w-100 mb-2">
                        <i class="bi bi-eye"></i> View Full Details
                    </a>
                    <a href="@Url.Action("AllTickets", "SupportTicket", new { area = "Admin" })" 
                        class="btn btn-outline-secondary w-100">
                        <i class="bi bi-list"></i> All Tickets
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .chat-messages {
        border: 1px solid #dee2e6;
        border-radius: 0.25rem;
    }

    .badge {
        font-size: 0.75rem;
        padding: 0.375rem 0.625rem;
    }

    textarea.form-control {
        resize: vertical;
    }

    textarea.form-control:focus {
        border-color: #0d6efd;
        box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
    }
</style>
