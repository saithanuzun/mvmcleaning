<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Admin Panel</title>
    
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    
    <style>
        /* Custom colors */
        :root {
            --primary-color: #194376;    /* Dark blue */
            --secondary-color: #46C6CE;  /* Teal/cyan */
        }
        
        .bg-primary-custom {
            background-color: var(--primary-color) !important;
        }
        
        .bg-secondary-custom {
            background-color: var(--secondary-color) !important;
        }
        
        .btn-primary-custom {
            background-color: var(--primary-color);
            border-color: var(--primary-color);
        }
        
        .btn-primary-custom:hover {
            background-color: #153760;
            border-color: #153760;
        }
        
        .btn-secondary-custom {
            background-color: var(--secondary-color);
            border-color: var(--secondary-color);
        }
        
        .btn-secondary-custom:hover {
            background-color: #3ab4bb;
            border-color: #3ab4bb;
        }
        
        /* Gradient background option */
        .bg-gradient-custom {
            background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
        }
    </style>
    
    @RenderSection("styles", required: false)
</head>
<body class="bg-light">
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar - Updated with primary color -->
            <nav class="col-md-3 col-lg-2 d-md-block bg-primary-custom sidebar vh-100 position-fixed">
                <div class="position-sticky pt-3">
                    <div class="px-3 pb-3 mb-3 border-bottom border-white border-opacity-25">
                        <h4 class="text-white">
                            <i class="bi bi-speedometer2"></i> Admin Panel
                        </h4>
                    </div>
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link text-white rounded mx-2 @(ViewContext.RouteData.Values["Controller"].ToString() == "Dashboard" ? "active bg-secondary-custom" : "text-opacity-75")" href="@Url.Action("Index", "Dashboard")">
                                <i class="bi bi-house-door me-2"></i> Dashboard
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white rounded mx-2 @(ViewContext.RouteData.Values["Controller"].ToString() == "Users" ? "active bg-secondary-custom" : "text-opacity-75")" href="@Url.Action("Index", "Users")">
                                <i class="bi bi-people me-2"></i> Users
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white rounded mx-2 @(ViewContext.RouteData.Values["Controller"].ToString() == "Products" ? "active bg-secondary-custom" : "text-opacity-75")" href="@Url.Action("Index", "Products")">
                                <i class="bi bi-box-seam me-2"></i> Products
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white rounded mx-2 @(ViewContext.RouteData.Values["Controller"].ToString() == "Orders" ? "active bg-secondary-custom" : "text-opacity-75")" href="@Url.Action("Index", "Orders")">
                                <i class="bi bi-cart me-2"></i> Orders
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white rounded mx-2 @(ViewContext.RouteData.Values["Controller"].ToString() == "Reports" ? "active bg-secondary-custom" : "text-opacity-75")" href="@Url.Action("Index", "Reports")">
                                <i class="bi bi-graph-up me-2"></i> Reports
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white rounded mx-2 @(ViewContext.RouteData.Values["Controller"].ToString() == "Settings" ? "active bg-secondary-custom" : "text-opacity-75")" href="@Url.Action("Index", "Settings")">
                                <i class="bi bi-gear me-2"></i> Settings
                            </a>
                        </li>
                        <li class="nav-item mt-4">
                            <a class="nav-link text-white text-opacity-75 rounded mx-2" href="@Url.Action("Logout", "Account")">
                                <i class="bi bi-box-arrow-right me-2"></i> Logout
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>

            <!-- Main Content -->
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 offset-md-3 offset-lg-2">
                <!-- Top Navbar - Updated with secondary color -->
                <nav class="navbar navbar-expand-lg navbar-light bg-secondary-custom shadow-sm mb-4 sticky-top">
                    <div class="container-fluid">
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        
                        <div class="collapse navbar-collapse" id="navbarNav">
                            <ul class="navbar-nav ms-auto">
                                <li class="nav-item dropdown">
                                    <a class="nav-link position-relative text-white" href="#" data-bs-toggle="dropdown">
                                        <i class="bi bi-bell fs-5"></i>
                                        <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-primary-custom">
                                            3
                                        </span>
                                    </a>
                                    <ul class="dropdown-menu dropdown-menu-end">
                                        <li><h6 class="dropdown-header">Notifications</h6></li>
                                        <li><a class="dropdown-item" href="#"><i class="bi bi-cart me-2"></i>New order received</a></li>
                                        <li><a class="dropdown-item" href="#"><i class="bi bi-person me-2"></i>New user registered</a></li>
                                        <li><a class="dropdown-item" href="#"><i class="bi bi-exclamation-triangle me-2"></i>Server status alert</a></li>
                                    </ul>
                                </li>
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle text-white" href="#" data-bs-toggle="dropdown">
                                        <i class="bi bi-person-circle fs-5"></i> Admin User
                                    </a>
                                    <ul class="dropdown-menu dropdown-menu-end">
                                        <li><a class="dropdown-item" href="@Url.Action("Profile", "Account")"><i class="bi bi-person me-2"></i>Profile</a></li>
                                        <li><a class="dropdown-item" href="@Url.Action("Settings", "Account")"><i class="bi bi-gear me-2"></i>Settings</a></li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li><a class="dropdown-item" href="@Url.Action("Logout", "Account")"><i class="bi bi-box-arrow-right me-2"></i>Logout</a></li>
                                    </ul>
                                </li>
                            </ul>
                        </div>
                    </div>
                </nav>

                <!-- Breadcrumb -->
                <nav aria-label="breadcrumb" class="mt-3">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Home</a></li>
                        <li class="breadcrumb-item active" aria-current="page">@ViewBag.Title</li>
                    </ol>
                </nav>

                <!-- Main Content Area - RenderBody -->
                <div class="content-wrapper">
                    @RenderBody()
                </div>

                <!-- Footer - Updated with primary color -->
                <footer class="mt-5 py-3 border-top bg-primary-custom text-white">
                    <div class="text-center">
                        <p class="mb-0">&copy; @DateTime.Now.Year - Admin Dashboard. All rights reserved.</p>
                    </div>
                </footer>
            </main>
        </div>
    </div>

    <!-- Bootstrap 5 JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>