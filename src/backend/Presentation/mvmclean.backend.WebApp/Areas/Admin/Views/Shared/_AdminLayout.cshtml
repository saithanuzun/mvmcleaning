<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Admin Panel</title>
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true">
    
    <link href="/img/logo.png" rel="icon" type="image/png">

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    
    <style>
        :root {
            --primary-color: #194376;    
            --secondary-color: #46C6CE; 
        }
        
        .bg-primary {
            background-color: var(--primary-color) !important;
        }
        
        .bg-secondary {
            background-color: var(--secondary-color) !important;
        }
        
        .btn-primary {
            background-color: var(--primary-color);
            border-color: var(--primary-color);
        }
        
        .btn-primary:hover {
            background-color: #153760;
            border-color: #153760;
        }
        
        .btn-secondary {
            background-color: var(--secondary-color);
            border-color: var(--secondary-color);
        }
        
        .btn-secondary:hover {
            background-color: #3ab4bb;
            border-color: #3ab4bb;
        }
        
        .bg-gradient {
            background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
        }
    </style>
    
    @RenderSection("styles", required: false)
</head>
<body class="bg-light">
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar - Updated with primary color -->
            <nav class="col-md-3 col-lg-2 d-md-block bg-primary sidebar vh-100 position-fixed">
                <div class="position-sticky pt-3">
                    <div class="px-3 pb-3 mb-3 border-bottom border-white border-opacity-25">
                        <h4 class="text-white">
                            <i class="bi bi-speedometer2"></i> Admin Panel
                        </h4>
                    </div>
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link text-white rounded mx-2 @(ViewContext.RouteData.Values["Controller"].ToString() == "Home" ? "active bg-secondary" : "text-opacity-75")" href="@Url.Action("Index", "Home")">
                                <i class="bi bi-house-door me-2"></i> Dashboard
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white rounded mx-2 @(ViewContext.RouteData.Values["Controller"].ToString() == "Service" ? "active bg-secondary" : "text-opacity-75")" href="@Url.Action("index", "Service")">
                                <i class="bi bi-box me-2"></i> Services
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white rounded mx-2 @(ViewContext.RouteData.Values["Controller"].ToString() == "Booking" ? "active bg-secondary" : "text-opacity-75")" href="@Url.Action("Index", "Booking")">
                                <i class="bi bi-journal-check me-2"></i> Bookings
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white rounded mx-2 @(ViewContext.RouteData.Values["Controller"].ToString() == "Promotion" ? "active bg-secondary" : "text-opacity-75")" href="@Url.Action("Index", "Promotion")">
                                <i class="bi bi-tag me-2"></i> Promotions
                            </a>
                        </li>
                        
                        <li class="nav-item">
                            <a class="nav-link text-white rounded mx-2 @(ViewContext.RouteData.Values["Controller"].ToString() == "Contractor" ? "active bg-secondary" : "text-opacity-75")" href="@Url.Action("Index", "Contractor")">
                                <i class="bi bi-people me-2"></i> Contractors
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white rounded mx-2 @(ViewContext.RouteData.Values["Controller"].ToString() == "Invoice" ? "active bg-secondary" : "text-opacity-75")" href="@Url.Action("Index", "Invoice")">
                                <i class="bi bi-receipt me-2"></i> Invoices
                            </a>
                        </li>
                        
                        <li class="nav-item">
                            <a class="nav-link text-white rounded mx-2 @(ViewContext.RouteData.Values["Controller"].ToString() == "Contact" ? "active bg-secondary" : "text-opacity-75")" href="@Url.Action("Index", "Contact")">
                                <i class="bi bi-chat-dots me-2"></i> Contacts
                            </a>
                        </li>
                        
                        <li class="nav-item">
                            <a class="nav-link text-white rounded mx-2 @(ViewContext.RouteData.Values["Controller"].ToString() == "SeoPage" ? "active bg-secondary" : "text-opacity-75")" href="@Url.Action("Index", "SeoPage")">
                                <i class="bi bi-sliders me-2"></i> SEO PAGE
                            </a>
                        </li>

                       
                        <li class="nav-item">
                            <a class="nav-link text-white rounded mx-2 @(ViewContext.RouteData.Values["Controller"].ToString() == "Settings" ? "active bg-secondary" : "text-opacity-75")" href="@Url.Action("Index", "Settings")">
                                <i class="bi bi-gear me-2"></i> Settings
                            </a>
                        </li>
                        <li class="nav-item mt-4">
                            <a class="nav-link text-white text-opacity-75 rounded mx-2" href="@Url.Action("Logout", "Account")">
                                <i class="bi bi-box-arrow-right me-2"></i> Logout
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>

            <!-- Main Content -->
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 offset-md-3 offset-lg-2">
                <!-- Top Navbar - Updated with secondary color -->
                <nav class="navbar navbar-expand-lg navbar-light bg-secondary shadow-sm mb-4 sticky-top">
                    <div class="container-fluid">
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        
                        <div class="collapse navbar-collapse" id="navbarNav">
                            <ul class="navbar-nav ms-auto">
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle text-white" href="#" id="quickActionsDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="bi bi-lightning-fill"></i> Quick Actions
                                    </a>
                                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="quickActionsDropdown">
                                        <li>
                                            <h6 class="dropdown-header">
                                                <i class="bi bi-plus-circle"></i> Create New
                                            </h6>
                                        </li>
                                        <li><a class="dropdown-item" asp-area="Admin" asp-controller="Service" asp-action="CreateService">
                                            <i class="bi bi-box"></i> Service
                                        </a></li>
                                        <li><a class="dropdown-item" asp-area="Admin" asp-controller="Promotion" asp-action="Create">
                                            <i class="bi bi-tag"></i> Promotion
                                        </a></li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li>
                                            <h6 class="dropdown-header">
                                                <i class="bi bi-list-ul"></i> View All
                                            </h6>
                                        </li>
                                        <li><a class="dropdown-item" asp-area="Admin" asp-controller="Booking" asp-action="AllBookings">
                                            <i class="bi bi-calendar-check"></i> All Bookings
                                        </a></li>
                                        <li><a class="dropdown-item" asp-area="Admin" asp-controller="Contractor" asp-action="AllContractors">
                                            <i class="bi bi-people"></i> All Contractors
                                        </a></li>
                                        <li><a class="dropdown-item" asp-area="Admin" asp-controller="Service" asp-action="AllServices">
                                            <i class="bi bi-box"></i> All Services
                                        </a></li>
                                        <li><a class="dropdown-item" asp-area="Admin" asp-controller="Promotion" asp-action="AllPromotions">
                                            <i class="bi bi-tag"></i> All Promotions
                                        </a></li>
                                        <li><a class="dropdown-item" asp-area="Admin" asp-controller="Invoice" asp-action="Index">
                                            <i class="bi bi-receipt"></i> All Invoices
                                        </a></li>
                                        <li><a class="dropdown-item" asp-area="Admin" asp-controller="Contact" asp-action="Index">
                                            <i class="bi bi-chat-dots"></i> All Contacts
                                        </a></li>
                                    </ul>
                                </li>
                            </ul>
                        </div>
                    </div>
                </nav>

                <!-- Breadcrumb -->
                <nav aria-label="breadcrumb" class="mt-3">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Home</a></li>
                        <li class="breadcrumb-item active" aria-current="page">@ViewBag.Title</li>
                    </ol>
                </nav>

                <!-- Main Content Area - RenderBody -->
                <div class="content-wrapper">
                    @RenderBody()
                    
                    <div></div>
                </div>
                
            </main>
           
        </div>
        
        
    </div>

    <!-- Bootstrap 5 JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>