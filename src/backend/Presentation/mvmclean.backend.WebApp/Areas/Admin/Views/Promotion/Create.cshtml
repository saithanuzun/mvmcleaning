@model mvmclean.backend.Application.Features.Promotion.Commands.CreatePromotionRequest

@{
    ViewData["Title"] = "Create Promotion";
}

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-md-12">
            <h2 class="mb-4">
                <i class="bi bi-plus-circle"></i> Create New Promotion
            </h2>
            <a href="@Url.Action("AllPromotions", "Promotion", new { area = "Admin" })" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to Promotions
            </a>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-form-check"></i> Promotion Information
                    </h5>
                </div>

                <div class="card-body">
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <form id="createPromotionForm" method="post" action="/Admin/Promotion/Create">
                        @Html.AntiForgeryToken()

                        <!-- Code -->
                        <div class="mb-3">
                            <label for="Code" class="form-label fw-semibold">
                                <i class="bi bi-tag"></i> Promotion Code *
                            </label>
                            <input type="text" id="Code" name="Code" value="@Model?.Code" class="form-control" placeholder="e.g., SUMMER2024" required />
                        </div>

                        <!-- Description -->
                        <div class="mb-3">
                            <label for="Description" class="form-label fw-semibold">
                                <i class="bi bi-file-text"></i> Description *
                            </label>
                            <textarea id="Description" name="Description" class="form-control" rows="3" placeholder="Describe the promotion..." required>@Model?.Description</textarea>
                        </div>

                        <!-- Discount Type -->
                        <div class="mb-3">
                            <label for="DiscountType" class="form-label fw-semibold">
                                <i class="bi bi-percent"></i> Discount Type *
                            </label>
                            <select id="DiscountType" name="DiscountType" class="form-select" required>
                                <option value="0" selected>Percentage</option>
                                <option value="1">Fixed Amount</option>
                                <option value="2">Fixed Price</option>
                            </select>
                        </div>

                        <!-- Discount Value -->
                        <div class="mb-3">
                            <label for="DiscountValue" class="form-label fw-semibold">
                                <i class="bi bi-cash"></i> Discount Value *
                            </label>
                            <input type="number" id="DiscountValue" name="DiscountValue" value="@Model?.DiscountValue" step="0.01" min="0.01" class="form-control" placeholder="e.g., 10 or 5.00" required />
                            <small class="text-muted">For percentage, enter value (e.g., 10 for 10%). For fixed amount, enter amount in GBP.</small>
                        </div>

                        <!-- Minimum Order Amount -->
                        <div class="mb-3">
                            <label for="MinimumOrderAmount" class="form-label fw-semibold">
                                <i class="bi bi-currency-pound"></i> Minimum Order Amount
                            </label>
                            <div class="input-group">
                                <span class="input-group-text">Â£</span>
                                <input type="number" id="MinimumOrderAmount" name="MinimumOrderAmount" value="@Model?.MinimumOrderAmount" step="0.01" min="0" class="form-control" placeholder="0.00" />
                            </div>
                            <small class="text-muted">Leave as 0 for no minimum</small>
                        </div>

                        <!-- Valid From -->
                        <div class="mb-3">
                            <label for="ValidFrom" class="form-label fw-semibold">
                                <i class="bi bi-calendar-check"></i> Valid From *
                            </label>
                            <input type="datetime-local" id="ValidFrom" name="ValidFrom" value="@Model?.ValidFrom.ToString("yyyy-MM-ddTHH:mm")" class="form-control" required />
                        </div>

                        <!-- Valid To -->
                        <div class="mb-3">
                            <label for="ValidTo" class="form-label fw-semibold">
                                <i class="bi bi-calendar-x"></i> Valid To *
                            </label>
                            <input type="datetime-local" id="ValidTo" name="ValidTo" value="@Model?.ValidTo.ToString("yyyy-MM-ddTHH:mm")" class="form-control" required />
                        </div>

                        <!-- Usage Limit -->
                        <div class="mb-4">
                            <label for="UsageLimit" class="form-label fw-semibold">
                                <i class="bi bi-hash"></i> Usage Limit
                            </label>
                            <input type="number" id="UsageLimit" name="UsageLimit" value="@Model?.UsageLimit" min="0" class="form-control" placeholder="0 for unlimited" />
                            <small class="text-muted">Leave as 0 for unlimited usage</small>
                        </div>

                        <hr/>

                        <!-- Actions -->
                        <div class="d-flex justify-content-end gap-2">
                            <a href="@Url.Action("AllPromotions", "Promotion", new { area = "Admin" })"
                               class="btn btn-secondary">
                                <i class="bi bi-x"></i> Cancel
                            </a>

                            <button type="submit" id="submitBtn" class="btn btn-primary">
                                <i class="bi bi-check-circle"></i> Create Promotion
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
