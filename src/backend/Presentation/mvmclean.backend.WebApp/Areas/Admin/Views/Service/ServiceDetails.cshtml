@model mvmclean.backend.Application.Features.Services.Queries.GetServiceByIdResponse

@{
    ViewData["Title"] = "Service Details";
}

<div class="container-fluid mt-4">
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row mb-4">
        <div class="col-md-12">
            <h2 class="mb-4">
                <i class="bi bi-briefcase"></i> Service Details
            </h2>
            <div class="btn-group" role="group">
                <a href="/Admin/Service/AllServices" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Back to Services
                </a>
                <a href="/Admin/Service/Edit/@Model.ServiceId" class="btn btn-warning">
                    <i class="bi bi-pencil"></i> Edit
                </a>
                <form action="/Admin/Service/Delete/@Model.ServiceId" method="post" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this service?');">
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Delete
                    </button>
                </form>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Service Information</h5>
                </div>

                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="text-muted"><small>Service Name</small></label>
                            <p class="fw-semibold">@Model.Name</p>
                        </div>
                        <div class="col-md-6">
                            <label class="text-muted"><small>Shortcut</small></label>
                            <p>
                                <span class="badge bg-secondary">@Model.Shortcut</span>
                            </p>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="text-muted"><small>Duration</small></label>
                            <p class="fw-semibold">@Model.Duration</p>
                        </div>
                        <div class="col-md-6">
                            <label class="text-muted"><small>Category</small></label>
                            <p>
                                <span class="badge bg-info">@Model.CategoryName</span>
                            </p>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="text-muted"><small>Base Price</small></label>
                            <p class="h5 fw-bold text-success">£@Model.BasePrice.ToString("0.00")</p>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-12">
                            <label class="text-muted"><small>Description</small></label>
                            <p>@Model.Description</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card border-0 shadow-sm">
                <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="bi bi-geo-alt"></i> Postcode Pricing Rules
                    </h5>
                    <a href="/Admin/Service/ServicePricingsDetails/@Model.ServiceId" class="btn btn-light btn-sm">
                        <i class="bi bi-eye"></i> View All
                    </a>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-sm mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Postcode Area</th>
                                    <th>Multiplier</th>
                                    <th>Fixed Adj.</th>
                                    <th>Adjusted Price</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.PostcodePricings != null && Model.PostcodePricings.Any())
                                {
                                    @foreach (var pricing in Model.PostcodePricings.Take(5))
                                    {
                                        var adjustedPrice = Model.BasePrice * pricing.Multiplier + pricing.FixedAdjustment;
                                        var multiplierBadge = pricing.Multiplier > 1 ? "bg-success" : (pricing.Multiplier < 1 ? "bg-info" : "bg-secondary");
                                        <tr>
                                            <td>
                                                <strong>@pricing.PostcodeArea</strong>
                                            </td>
                                            <td>
                                                <span class="badge @multiplierBadge">@pricing.Multiplier.ToString("0.00")x</span>
                                            </td>
                                            <td>
                                                <span class="badge bg-warning">@(pricing.FixedAdjustment >= 0 ? "+" : "")£@pricing.FixedAdjustment.ToString("0.00")</span>
                                            </td>
                                            <td>
                                                <strong class="text-success">£@adjustedPrice.ToString("0.00")</strong>
                                            </td>
                                        </tr>
                                    }
                                    @if (Model.PostcodePricings.Count > 5)
                                    {
                                        <tr class="table-light">
                                            <td colspan="4" class="text-center small text-muted">
                                                +@(Model.PostcodePricings.Count - 5) more pricing rules
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="4" class="text-center text-muted py-3">
                                            <small>No postcode pricing rules configured</small>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <!-- Add Postcode Pricing Form -->
                    <div class="mt-4 pt-4 border-top">
                        <h6 class="mb-3 fw-bold">
                            <i class="bi bi-plus-circle"></i> Add New Postcode Pricing
                        </h6>
                        <form action="/Admin/Service/CreateServicePricing" method="post">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="ServiceId" value="@Model.ServiceId" />

                            <div class="row g-2">
                                <div class="col-md-4">
                                    <input type="text" name="Postcode" class="form-control form-control-sm" placeholder="Postcode" maxlength="8" required />
                                    <small class="text-muted">e.g., SW1A1AA</small>
                                </div>
                                <div class="col-md-3">
                                    <input type="number" name="Multiplier" class="form-control form-control-sm" placeholder="Multiplier" step="0.01" value="1.0" required />
                                    <small class="text-muted">e.g., 1.2</small>
                                </div>
                                <div class="col-md-3">
                                    <input type="number" name="FixedAdjustment" class="form-control form-control-sm" placeholder="Fixed £" step="0.01" value="0" required />
                                    <small class="text-muted">e.g., 20</small>
                                </div>
                                <div class="col-md-2">
                                    <button type="submit" class="btn btn-success btn-sm w-100">
                                        <i class="bi bi-plus"></i> Add
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-info-circle"></i> Quick Info
                    </h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="text-muted"><small>Service ID</small></label>
                        <p class="small font-monospace">@Model.ServiceId</p>
                    </div>
                    <hr />
                    <a href="/Admin/Service/Edit/@Model.ServiceId" class="btn btn-warning btn-sm w-100">
                        <i class="bi bi-pencil"></i> Edit Service
                    </a>
                    <form action="/Admin/Service/Delete/@Model.ServiceId" method="post" style="margin-top: 10px;" onsubmit="return confirm('Are you sure?');">
                        <button type="submit" class="btn btn-danger btn-sm w-100">
                            <i class="bi bi-trash"></i> Delete Service
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
