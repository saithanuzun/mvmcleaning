@model List<mvmclean.backend.Application.Features.Services.GetAllServicesResponse>

@{
    ViewData["Title"] = "All Services";
}

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h2 class="mb-1">
                <i class="bi bi-briefcase"></i> Services Management
            </h2>
            <p class="text-muted mb-0">Manage all available services</p>
        </div>

        <div class="col-md-4 text-end">
            <a asp-area="Admin" asp-controller="Service" asp-action="CreateService" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create Service
            </a>
        </div>
    </div>

    <div class="card border-0 shadow-sm">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">
                <i class="bi bi-list-check"></i> All Services
                <span class="badge bg-light text-dark float-end">@Model?.Count ?? 0</span>
            </h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0 align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Name</th>
                            <th>Shortcut</th>
                            <th>Duration</th>
                            <th>Category</th>
                            <th class="text-end">Base Price</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>

                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var service in Model)
                            {
                                <tr>
                                    <td class="fw-semibold">@service.Name</td>

                                    <td>
                                        <span class="badge bg-secondary">
                                            @service.Shortcut
                                        </span>
                                    </td>

                                    <td>@service.Duration</td>

                                    <td>@service.CategoryName</td>

                                    <td class="text-end">
                                        <strong>Â£@service.BasePrice.ToString("0.00")</strong>
                                    </td>

                                    <td class="text-center">
                                        <a asp-area="Admin" asp-controller="Service" asp-action="ServiceDetails"
                                            asp-route-serviceId="@service.ServiceId" class="btn btn-sm btn-outline-primary"
                                            title="View Details">
                                            <i class="bi bi-eye"></i> View
                                        </a>
                                        <a asp-area="Admin" asp-controller="Service" asp-action="ServicePricingsDetails"
                                            asp-route-serviceId="@service.ServiceId" class="btn btn-sm btn-outline-info"
                                            title="View Pricing">
                                            <i class="bi bi-tag"></i> Pricing
                                        </a>
                                        <button class="btn btn-sm btn-outline-danger" disabled title="Coming soon">
                                            <i class="bi bi-trash"></i> Delete
                                        </button>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6" class="text-center text-muted py-4">
                                    <i class="bi bi-inbox"></i> No services found.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
