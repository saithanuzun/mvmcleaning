@model List<mvmclean.backend.Application.Features.Services.GetAllServicesResponse>

@{
    ViewData["Title"] = "All Services";
}

<div class="container mt-4">
    <div class="row mb-3">
        <div class="col">
            <h4 class="fw-bold">Services</h4>
            <p class="text-muted mb-0">All available services</p>
        </div>

        <div class="col text-end">
            <a asp-area="Admin"
               asp-controller="Service"
               asp-action="CreateService"
               class="btn btn-primary">
                + Create Service
            </a>
        </div>
    </div>

    <div class="card border-0 shadow-sm">
        <div class="card-body p-0">
            <table class="table table-hover mb-0 align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Name</th>
                        <th>Shortcut</th>
                        <th>Duration</th>
                        <th>Category</th>
                        <th class="text-end">Base Price</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>

                <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var service in Model)
                    {
                        <tr>
                            <td class="fw-semibold">@service.Name</td>

                            <td>
                                <span class="badge bg-secondary">
                                    @service.Shortcut
                                </span>
                            </td>

                            <td>@service.Duration</td>

                            <td>@service.CategoryName</td>

                            <td class="text-end">
                                Â£@service.BasePrice.ToString("0.00")
                            </td>

                            <td class="text-center">
                                <a asp-area="Admin"
                                   asp-controller="Service"
                                   asp-action="Details"
                                   asp-route-id="@service.ServiceId"
                                   class="btn btn-sm btn-outline-primary">
                                    View
                                </a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="text-center text-muted py-4">
                            No services found.
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>
