@model mvmclean.backend.Application.Features.Services.CreateServiceRequest

@{
    ViewData["Title"] = "Create Service";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">

            <div class="card border-0 shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Create New Service</h5>
                </div>

                <div class="card-body">
                    <form asp-area="Admin"
                          asp-controller="Service"
                          asp-action="CreateService"
                          method="post">

                        @Html.AntiForgeryToken()

                        <!-- Name -->
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label fw-semibold"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <!-- Description -->
                        <div class="mb-3">
                            <label asp-for="Description" class="form-label fw-semibold"></label>
                            <textarea asp-for="Description"
                                      class="form-control"
                                      rows="3"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <!-- Shortcut -->
                        <div class="mb-3">
                            <label asp-for="Shortcut" class="form-label fw-semibold"></label>
                            <input asp-for="Shortcut" class="form-control" />
                            <span asp-validation-for="Shortcut" class="text-danger"></span>
                        </div>

                        <!-- Duration -->
                        <div class="mb-3">
                            <label asp-for="EstimatedDurationMinutes" class="form-label fw-semibold">
                                Estimated Duration (minutes)
                            </label>
                            <input asp-for="EstimatedDurationMinutes"
                                   type="number"
                                   min="1"
                                   class="form-control" />
                            <span asp-validation-for="EstimatedDurationMinutes"
                                  class="text-danger"></span>
                        </div>

                        <!-- Category -->
                        <div class="mb-3">
                            <label asp-for="CategoryId" class="form-label fw-semibold"></label>
                            <select asp-for="CategoryId"
                                    asp-items="ViewBag.Categories"
                                    class="form-select">
                                <option value="">-- Select Category --</option>
                            </select>
                            <span asp-validation-for="CategoryId"
                                  class="text-danger"></span>
                        </div>

                        <!-- Base Price -->
                        <div class="mb-4">
                            <label asp-for="BasePrice" class="form-label fw-semibold"></label>
                            <div class="input-group">
                                <span class="input-group-text">Â£</span>
                                <input asp-for="BasePrice"
                                       type="number"
                                       step="0.01"
                                       min="0"
                                       class="form-control" />
                            </div>
                            <span asp-validation-for="BasePrice"
                                  class="text-danger"></span>
                        </div>

                        <!-- Actions -->
                        <div class="d-flex justify-content-end gap-2">
                            <a asp-area="Admin"
                               asp-controller="Service"
                               asp-action="AllServices"
                               class="btn btn-secondary">
                                Cancel
                            </a>

                            <button type="submit" class="btn btn-primary">
                                Create Service
                            </button>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
