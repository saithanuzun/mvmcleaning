@model mvmclean.backend.Application.Features.Services.Commands.CreateServiceRequest

@{
    ViewData["Title"] = "Create Service";
}

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-md-12">
            <h2 class="mb-4">
                <i class="bi bi-plus-circle"></i> Create New Service
            </h2>
            <a href="/Admin/Service/AllServices" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to Services
            </a>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-form-check"></i> Service Information
                    </h5>
                </div>

                <div class="card-body">
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <form id="createServiceForm" method="post" action="/Admin/Service/CreateService">
                        @Html.AntiForgeryToken()

                        <!-- Name -->
                        <div class="mb-3">
                            <label for="Name" class="form-label fw-semibold">
                                <i class="bi bi-chat-dots"></i> Service Name *
                            </label>
                            <input type="text" id="Name" name="Name" value="@Model?.Name" class="form-control" placeholder="e.g., General Cleaning" required />
                        </div>

                        <!-- Description -->
                        <div class="mb-3">
                            <label for="Description" class="form-label fw-semibold">
                                <i class="bi bi-file-text"></i> Description *
                            </label>
                            <textarea id="Description" name="Description" class="form-control" rows="3" placeholder="Describe the service..." required>@Model?.Description</textarea>
                        </div>

                        <!-- Shortcut -->
                        <div class="mb-3">
                            <label for="Shortcut" class="form-label fw-semibold">
                                <i class="bi bi-lightning"></i> Shortcut *
                            </label>
                            <input type="text" id="Shortcut" name="Shortcut" value="@Model?.Shortcut" class="form-control" placeholder="e.g., GC" maxlength="5" required />
                            <small class="text-muted">Abbreviation for the service (max 5 characters)</small>
                        </div>

                        <!-- Duration -->
                        <div class="mb-3">
                            <label for="EstimatedDurationMinutes" class="form-label fw-semibold">
                                <i class="bi bi-hourglass-split"></i> Estimated Duration (minutes) *
                            </label>
                            <input type="number" id="EstimatedDurationMinutes" name="EstimatedDurationMinutes" value="@Model?.EstimatedDurationMinutes" class="form-control" placeholder="e.g., 60" min="1" required />
                            <small class="text-muted">Duration in minutes</small>
                        </div>

                        <!-- Category -->
                        <div class="mb-3">
                            <label for="Category" class="form-label fw-semibold">
                                <i class="bi bi-tag"></i> Category *
                            </label>
                            <input type="text" id="Category" name="Category" value="@Model?.Category" class="form-control" placeholder="e.g., General Cleaning, Deep Cleaning" required />
                            <small class="text-muted">Category name for organizing services</small>
                        </div>

                        <!-- Base Price -->
                        <div class="mb-4">
                            <label for="BasePrice" class="form-label fw-semibold">
                                <i class="bi bi-currency-pound"></i> Base Price *
                            </label>
                            <div class="input-group">
                                <span class="input-group-text">Â£</span>
                                <input type="number" id="BasePrice" name="BasePrice" value="@Model?.BasePrice" step="0.01" min="0" class="form-control" placeholder="0.00" required />
                            </div>
                            <small class="text-muted">Base price before postcode adjustments</small>
                        </div>

                        <hr/>

                        <!-- Actions -->
                        <div class="d-flex justify-content-end gap-2">
                            <a href="@Url.Action("AllServices", "Service", new { area = "Admin" })"
                               class="btn btn-secondary">
                                <i class="bi bi-x"></i> Cancel
                            </a>

                            <button type="submit" id="submitBtn" class="btn btn-primary">
                                <i class="bi bi-check-circle"></i> Create Service
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <div class="card border-0 shadow-sm mt-3">
                <div class="card-header bg-info text-white">
                    <h6 class="mb-0">
                        <i class="bi bi-lightbulb"></i> Tips
                    </h6>
                </div>
                <div class="card-body">
                    <ul class="small mb-0">
                        <li>Service name should be descriptive and customer-friendly</li>
                        <li>Shortcut is used for quick reference (e.g., GC for General Cleaning)</li>
                        <li>Duration should reflect realistic service time</li>
                        <li>Base price can be adjusted per postcode area later</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.getElementById('createServiceForm').addEventListener('submit', function(e) {
            console.log('Form submitting...');
            console.log('Form data:', {
                Name: document.getElementById('Name').value,
                Description: document.getElementById('Description').value,
                Shortcut: document.getElementById('Shortcut').value,
                EstimatedDurationMinutes: document.getElementById('EstimatedDurationMinutes').value,
                Category: document.getElementById('Category').value,
                BasePrice: document.getElementById('BasePrice').value
            });
        });

        document.getElementById('submitBtn').addEventListener('click', function(e) {
            console.log('Submit button clicked');
        });
    </script>
}