@model mvmclean.backend.Application.Features.Services.AddServicePostcodePricingRequest

@{
    ViewData["Title"] = "Add Service Pricing";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-6">

            <div class="card border-0 shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Add Service Pricing</h5>
                </div>

                <div class="card-body">
                    <form asp-area="Admin"
                          asp-controller="Service"
                          asp-action="CreateServicePricings"
                          method="post">
                        @Html.AntiForgeryToken()

                        <!-- ServiceId (hidden) -->
                        <input type="hidden" asp-for="ServiceId" />

                        <!-- Postcode -->
                        <div class="mb-3">
                            <label asp-for="Postcode" class="form-label fw-semibold"></label>
                            <input asp-for="Postcode" class="form-control" placeholder="Enter postcode area" />
                            <span asp-validation-for="Postcode" class="text-danger"></span>
                        </div>

                        <!-- Multiplier -->
                        <div class="mb-3">
                            <label asp-for="Multiplier" class="form-label fw-semibold"></label>
                            <input asp-for="Multiplier"
                                   type="number"
                                   step="0.01"
                                   min="0"
                                   class="form-control" />
                            <span asp-validation-for="Multiplier" class="text-danger"></span>
                        </div>

                        <!-- Fixed Adjustment -->
                        <div class="mb-4">
                            <label asp-for="FixedAdjustment" class="form-label fw-semibold"></label>
                            <div class="input-group">
                                <span class="input-group-text">Â£</span>
                                <input asp-for="FixedAdjustment"
                                       type="number"
                                       step="0.01"
                                       min="0"
                                       class="form-control" />
                            </div>
                            <span asp-validation-for="FixedAdjustment" class="text-danger"></span>
                        </div>

                        <!-- Actions -->
                        <div class="d-flex justify-content-end gap-2">
                            <a asp-area="Admin"
                               asp-controller="Service"
                               asp-action="ServicePricings"
                               asp-route-serviceId="@Model.ServiceId"
                               class="btn btn-secondary">
                                Cancel
                            </a>

                            <button type="submit" class="btn btn-primary">
                                Add Pricing
                            </button>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
