@{
    ViewData["Title"] = "Service Management";
}

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col">
            <h2 class="fw-bold">
                <i class="bi bi-briefcase"></i> Service Management
            </h2>
            <p class="text-muted">Manage services and postcode pricing</p>
        </div>
    </div>

    <div class="row g-3">
        <!-- All Services -->
        <div class="col-md-6">
            <a href="@Url.Action("AllServices", "Service", new { area = "Admin" })"
               class="btn btn-primary w-100 py-4">
                <i class="bi bi-list-check"></i> View All Services
            </a>
        </div>

        <!-- Create Service -->
        <div class="col-md-6">
            <a href="@Url.Action("CreateService", "Service", new { area = "Admin" })"
               class="btn btn-success w-100 py-4">
                <i class="bi bi-plus-circle"></i> Create New Service
            </a>
        </div>
    </div>
</div>