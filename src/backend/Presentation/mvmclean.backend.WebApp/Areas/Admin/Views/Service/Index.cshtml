@{
    ViewData["Title"] = "Service Management";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col">
            <h2 class="fw-bold">Service Management</h2>
            <p class="text-muted">Manage services and pricing</p>
        </div>
    </div>

    <div class="row g-3">
        <!-- All Services -->
        <div class="col-md-4">
            <a href="@Url.Action("AllServices", "Service", new { area = "Admin" })"
               class="btn btn-primary w-100 py-3">
                View All Services
            </a>
        </div>

        <!-- Create Service -->
        <div class="col-md-4">
            <a href="@Url.Action("CreateService", "Service", new { area = "Admin" })"
               class="btn btn-secondary w-100 py-3">
                Create New Service
            </a>
        </div>
        

        <!-- Create Service Pricing (without serviceId) -->
        <div class="col-md-4">
            <a href="@Url.Action("CreateServicePricing", "Service", new { area = "Admin" })"
               class="btn btn-secondary w-100 py-3">
                Create Service Pricing
            </a>
        </div>
    </div>
</div>