@using mvmclean.backend.Application.Features.Services.Queries
@model List<GetServicePostcodePricingsResponse>

@{
    ViewData["Title"] = "Service Pricing Rules";
    var serviceId = Model?.FirstOrDefault()?.ServiceId;
}

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h2 class="mb-1">
                <i class="bi bi-tag"></i> Service Postcode Pricings
            </h2>
            <p class="text-muted mb-0">Manage pricing rules by postcode area</p>
        </div>

        <div class="col-md-4 text-end">
            <a href="/Admin/Service/AllServices" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to Services
            </a>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(TempData["Success"]?.ToString()))
    {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="bi bi-check-circle"></i> @TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
    }

    @if (!string.IsNullOrEmpty(TempData["Error"]?.ToString()))
    {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="bi bi-exclamation-circle"></i> @TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
    }

    <div class="card border-0 shadow-sm">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">
                <i class="bi bi-list-check"></i> Pricing Rules
                <span class="badge bg-light text-dark float-end">@Model?.Count ?? 0</span>
            </h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Postcode Area</th>
                            <th>Multiplier</th>
                            <th>Fixed Adjustment</th>
                            <th>Type</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var pricing in Model)
                            {
                                var multiplierBadge = pricing.Multiplier > 1 ? "bg-success" : (pricing.Multiplier < 1 ? "bg-info" : "bg-secondary");
                                        <tr>
                                            <td>
                                                <strong>@pricing.PostcodeArea</strong>
                                            </td>
                                            <td>
                                                <span class="badge @multiplierBadge">@pricing.Multiplier.ToString("0.00")x</span>
                                            </td>
                                            <td>
                                                <span class="badge bg-warning">£@pricing.FixedAdjustment.ToString("0.00")</span>
                                            </td>
                                            <td>
                                        @if (pricing.Multiplier != 1 && pricing.FixedAdjustment != 0)
                                        {
                                                        <small class="text-muted">Multiplier + Fixed</small>
                                        }
                                        else if (pricing.Multiplier != 1)
                                        {
                                                        <small class="text-muted">Multiplier Only</small>
                                        }
                                        else
                                        {
                                                        <small class="text-muted">Fixed Only</small>
                                        }
                                            </td>
                                            <td class="text-center">
                                                <button class="btn btn-sm btn-outline-primary" disabled title="Coming soon">
                                                    <i class="bi bi-pencil"></i> Edit
                                                </button>
                                                <button class="btn btn-sm btn-outline-danger" disabled title="Coming soon">
                                                    <i class="bi bi-trash"></i> Delete
                                                </button>
                                            </td>
                                        </tr>
                            }
                        }
                        else
                        {
                                <tr>
                                    <td colspan="5" class="text-center text-muted py-4">
                                        <i class="bi bi-inbox"></i> No pricing rules found.
                                    </td>
                                </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Add New Pricing Form -->
    <div class="card border-0 shadow-sm mt-4">
        <div class="card-header bg-success text-white">
            <h5 class="mb-0">
                <i class="bi bi-plus-circle"></i> Add New Pricing Rule
            </h5>
        </div>
        <div class="card-body">
            <form action="/Admin/Service/CreateServicePricing" method="post">
                @Html.AntiForgeryToken()
                
                <input type="hidden" name="ServiceId" value="@serviceId" />
                
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label for="Postcode" class="form-label fw-semibold">
                                <i class="bi bi-geo-alt"></i> Postcode *
                            </label>
                            <input type="text" id="Postcode" name="Postcode" class="form-control" placeholder="e.g., SW1A1AA" maxlength="8" required />
                            <small class="text-muted">Full UK postcode (5-8 characters)</small>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="mb-3">
                            <label for="Multiplier" class="form-label fw-semibold">
                                <i class="bi bi-percent"></i> Multiplier *
                            </label>
                            <input type="number" id="Multiplier" name="Multiplier" class="form-control" step="0.01" value="1.0" required />
                            <small class="text-muted">e.g., 1.2 = +20%</small>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="mb-3">
                            <label for="FixedAdjustment" class="form-label fw-semibold">
                                <i class="bi bi-currency-pound"></i> Fixed (£) *
                            </label>
                            <input type="number" id="FixedAdjustment" name="FixedAdjustment" class="form-control" step="0.01" value="0" required />
                            <small class="text-muted">Additional amount</small>
                        </div>
                    </div>
                </div>
                <button type="submit" class="btn btn-success">
                    <i class="bi bi-check-circle"></i> Add Pricing Rule
                </button>
            </form>
        </div>
    </div>

    <div class="mt-4">
        <a href="/Admin/Service/ServiceDetails/@serviceId" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to Service
        </a>
    </div>
</div>
