@{
    var code = (ViewData["StatusCode"] as int?) ?? 400;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .error-icon {
        font-size: 4rem;
        margin-bottom: 20px;
    }
</style>

<div class="container py-5 text-center">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="error-icon text-warning">
                <i class="fas fa-exclamation-circle"></i>
            </div>
            <h1 class="display-4 text-warning">Bad Request</h1>
            <p class="lead">The request could not be processed. Please check your input and try again.</p>
            <hr class="my-4">
            <a class="btn btn-primary btn-lg" href="/">Return Home</a>
        </div>
    </div>
</div>