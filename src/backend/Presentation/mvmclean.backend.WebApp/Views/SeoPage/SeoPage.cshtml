}

@if ((isAreaLevel || isCityAreaLevel) && servicesOffered.Any())
{
    <div class="seo-section bg-light">
        <div class="container">
            <h2>Services We Offer@(isCityAreaLevel ? $" in {Model.Area}" : isAreaLevel ? $" in {Model.Area}" : "")</h2>
            <div class="seo-cards-grid">
                @foreach (var service in servicesOffered)
                {
                    @if (isCityAreaLevel && !string.IsNullOrEmpty(Model.City) && !string.IsNullOrEmpty(Model.Area))
                    {
                        <a href="@FormatCityAreaServiceSlug(Model.City, Model.Area, service)" class="seo-card">
                            <i class="fas fa-check-circle"></i>
                            <h5>@service</h5>
                        </a>
                    }
                    else if (isAreaLevel && !string.IsNullOrEmpty(Model.Area))
                    {
                        <a href="@FormatAreaServiceSlug(Model.Area, service)" class="seo-card">
                            <i class="fas fa-check-circle"></i>
                            <h5>@service</h5>
                        </a>
                    }
