@{
    Layout = "_Layout";
    ViewData["Title"] = Model.MetaTitle;

    var isAreaLevel = Model.Level == "AreaOnly";
    var isCityLevel = Model.Level == "CityOnly";
    var isCityAreaLevel = Model.Level == "CityArea";
    var isFullPageLevel = Model.Level == "CityAreaService";

    // Helper functions for URL generation
    string FormatSlug(string input) => input?.ToLower().Replace(" ", "-") ?? "";
    string FormatAreaSlug(string area) => $"/{FormatSlug(area)}";
    string FormatServiceSlug(string service) => $"/{FormatSlug(service)}";
    string FormatCityAreaServiceSlug(string city, string area, string service) => $"/{FormatSlug(city)}/{FormatSlug(area)}/{FormatSlug(service)}";
    string FormatAreaServiceSlug(string area, string service) => $"/{FormatSlug(area)}/{FormatSlug(service)}";

    // Data extraction with null checks
    var areasServed = Model.AreasServed?.Split(',', StringSplitOptions.RemoveEmptyEntries)
        .Select(a => a.Trim())
        .Where(a => !string.IsNullOrWhiteSpace(a))
        .ToList() ?? new List<string>();

    var servicesOffered = Model.ServicesOffered?.Split(',', StringSplitOptions.RemoveEmptyEntries)
        .Select(s => s.Trim())
        .Where(s => !string.IsNullOrWhiteSpace(s))
        .ToList() ?? new List<string>();

    var keywords = Model.Keywords?.Select(k => k.Keyword).ToList() ?? new List<string>();

    // Helper for image paths - use root-relative paths
    string ImagePath(string path) => $"~/{path.TrimStart('~', '/')}";
}

@section MetaTags {
    <meta name="description" content="@Model.MetaDescription">
    @if (keywords.Any())
    {
        <meta name="keywords" content="@string.Join(", ", keywords)">
