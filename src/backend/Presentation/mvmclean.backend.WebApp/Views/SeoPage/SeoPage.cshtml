    <div class="seo-section">
        <div class="container">
            <h2>Areas We Serve in @Model.City</h2>
            <div class="seo-cards-grid">
                @foreach (var area in areasServed)
                {
                    <a href="@FormatAreaSlug(area)" class="seo-card">
                        <i class="fas fa-map-marker-alt"></i>
                        <h5>@area</h5>
