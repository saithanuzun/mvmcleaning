@{
    ViewData["Title"] = "Find Your Booking";
}

<style>
    .find-booking-header {
        background: linear-gradient(135deg, #194376 0%, #2d5fa3 100%);
    }
    
    .form-control:focus {
        border-color: #46C6CE;
        box-shadow: 0 0 0 0.2rem rgba(70, 198, 206, 0.25);
    }
    
    .btn-find {
        background-color: #194376;
        border-color: #194376;
        font-weight: 600;
        transition: all 0.3s ease;
    }
    
    .btn-find:hover {
        background-color: #2d5fa3;
        border-color: #2d5fa3;
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(25, 67, 118, 0.3);
    }
    
    .card {
        border: 2px solid #f0f0f0;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        border-radius: 12px;
        overflow: hidden;
    }
    
    .form-label {
        font-weight: 600;
        color: #194376;
    }
    
    .alert-info {
        background-color: #e8f4f8;
        border-left: 4px solid #46C6CE;
        color: #194376;
    }
    
    .alert-info .alert-heading {
        color: #194376;
    }
</style>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header find-booking-header text-white">
                    <h4 class="mb-0">Find Your Booking</h4>
                </div>
                <div class="card-body">
                    <p class="text-muted mb-4">
                        Enter your phone number and postcode to find your booking details.
                    </p>

                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <ul class="mb-0">
                                @foreach (var modelState in ViewData.ModelState.Values)
                                {
                                    @foreach (var error in modelState.Errors)
                                    {
                                        <li>@error.ErrorMessage</li>
                                    }
                                }
                            </ul>
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <form method="post" asp-action="Find" asp-controller="Booking">
                        @Html.AntiForgeryToken()

                        <div class="mb-3">
                            <label for="phoneNumber" class="form-label">Telephone Number *</label>
                            <input type="tel" class="form-control" id="phoneNumber" name="phoneNumber" 
                                   placeholder="e.g. 07123 456789" required 
                                   value="@(ViewData.ModelState["phoneNumber"]?.AttemptedValue ?? "")">
                            <small class="form-text text-muted">
                                Enter the phone number used when creating the booking
                            </small>
                        </div>

                        <div class="mb-3">
                            <label for="postcode" class="form-label">Postcode *</label>
                            <input type="text" class="form-control text-uppercase" id="postcode" name="postcode" 
                                   placeholder="e.g. SW1A 1AA" required 
                                   value="@(ViewData.ModelState["postcode"]?.AttemptedValue ?? "")">
                            <small class="form-text text-muted">
                                Enter the postcode for the service address
                            </small>
                        </div>

                        <button type="submit" class="btn btn-find btn-lg w-100">
                            <i class="fas fa-search me-2"></i> Find Booking
                        </button>
                    </form>

                    <hr class="my-4">

                    <div class="alert alert-info">
                        <h6 class="alert-heading">Need Help?</h6>
                        <p class="mb-0">
                            If you don't have your booking details, please contact our customer support team.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-format postcode to uppercase
        document.getElementById('postcode')?.addEventListener('input', function(e) {
            this.value = this.value.toUpperCase();
        });

        // Auto-format phone number (basic example)
        document.getElementById('phoneNumber')?.addEventListener('input', function(e) {
            let value = this.value.replace(/\D/g, '');
            if (value.length > 0) {
                if (value.startsWith('0')) {
                    if (value.length <= 4) {
                        this.value = value;
                    } else if (value.length <= 7) {
                        this.value = value.slice(0, 4) + ' ' + value.slice(4);
                    } else {
                        this.value = value.slice(0, 4) + ' ' + value.slice(4, 7) + ' ' + value.slice(7, 11);
                    }
                }
            }
        });
    </script>
}

<style>
    .card {
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        border: none;
    }

    .card-header {
        border-bottom: 2px solid #0056b3;
        padding: 1rem 1.5rem;
    }

    .form-label {
        font-weight: 600;
        color: #333;
        margin-bottom: 0.5rem;
    }

    .btn-primary {
        font-weight: 600;
        transition: all 0.3s ease;
        background: linear-gradient(135deg, #0056b3, #007bff);
        border: none;
        padding: 0.75rem;
    }

    .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(0, 86, 179, 0.3);
        background: linear-gradient(135deg, #004494, #0056b3);
    }

    .form-control {
        border: 1px solid #ced4da;
        padding: 0.75rem;
        border-radius: 0.375rem;
        transition: border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
    }

    .form-control:focus {
        border-color: #86b7fe;
        box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
        outline: none;
    }

    .alert ul {
        padding-left: 1rem;
        margin-bottom: 0;
    }

    .alert li {
        margin-bottom: 0.25rem;
    }
</style>