@{
ViewData["Title"] = "Find Your Booking";
}

<!-- Page Header Start -->
<div class="page-header container-fluid bg-secondary pt-1 pt-lg-2 pb-1 mb-2">
    <div class="container py-5">
        <div class="row align-items-center py-4">
            <div class="col-md-6 text-center text-md-left">
                <h1 class="mb-4 mb-md-0 text-white">Find Your Booking - MvM Cleaning Services</h1>
            </div>
            <div class="col-md-6 text-center text-md-right">
                <div class="d-inline-flex align-items-center">
                    <a class="btn text-white" href="/">Home</a>
                    <i class="fas fa-angle-right text-white"></i>
                    <a class="btn text-white disabled" href="">Find Booking</a>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Page Header End -->

<!-- Find Booking Start -->
<div class="container-fluid py-5">
    <div class="container" style="max-width: 900px;">
        <div class="row">
            <div class="col-12">
                <div class="row mb-5">
                    <div class="col-md-4">
                        <div class="d-flex flex-column align-items-center justify-content-center text-center mb-4">
                            <div class="d-inline-flex align-items-center justify-content-center bg-white border border-light shadow rounded-circle mb-3"
                                 style="width: 80px; height: 80px; border-width: 10px !important;">
                                <i class="fa fa-search text-secondary"></i>
                            </div>
                            <h5 class="font-weight-medium m-0 mt-2">Quick Search</h5>
                            <p class="text-muted mb-0 text-center">Find your booking in seconds</p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="d-flex flex-column align-items-center justify-content-center text-center mb-4">
                            <div class="d-inline-flex align-items-center justify-content-center bg-white border border-light shadow rounded-circle mb-3"
                                 style="width: 80px; height: 80px; border-width: 10px !important;">
                                <i class="fa fa-phone-alt text-secondary"></i>
                            </div>
                            <h5 class="font-weight-medium m-0 mt-2">Phone & Postcode</h5>
                            <p class="text-muted mb-0 text-center">Two details needed</p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="d-flex flex-column align-items-center justify-content-center text-center mb-4">
                            <div class="d-inline-flex align-items-center justify-content-center bg-white border border-light shadow rounded-circle mb-3"
                                 style="width: 80px; height: 80px; border-width: 10px !important;">
                                <i class="fa fa-shield-alt text-secondary"></i>
                            </div>
                            <h5 class="font-weight-medium m-0 mt-2">Secure & Private</h5>
                            <p class="text-muted mb-0 text-center">Your data is protected</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-12">
                <div class="contact-form">
                    @if (!ViewData.ModelState.IsValid)
                    {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <ul class="mb-0">
                            @foreach (var modelState in ViewData.ModelState.Values)
                            {
                            @foreach (var error in modelState.Errors)
                            {
                            <li>@error.ErrorMessage</li>
                            }
                            }
                        </ul>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                    }

                    @if (TempData["SuccessMessage"] != null)
                    {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        @TempData["SuccessMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                    }

                    <div class="text-center mb-4">
                        <h3 class="text-primary mb-2">Find Your Booking</h3>
                        <p class="text-muted">Enter your phone number and postcode to find your booking details.</p>
                    </div>

                    <form method="post" asp-action="Find" asp-controller="Booking">
                        @Html.AntiForgeryToken()

                        <div class="form-row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="phoneNumber" class="form-label">Telephone Number *</label>
                                    <input type="tel" class="form-control" id="phoneNumber" name="phoneNumber"
                                           placeholder="e.g. 07405 392 635" required
                                           value="@(ViewData.ModelState["phoneNumber"]?.AttemptedValue ?? "")">
                                    <small class="form-text text-muted">
                                        Enter the phone number used when creating the booking
                                    </small>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="postcode" class="form-label">Postcode *</label>
                                    <input type="text" class="form-control text-uppercase" id="postcode" name="postcode"
                                           placeholder="e.g. SW1A 1AA" required
                                           value="@(ViewData.ModelState["postcode"]?.AttemptedValue ?? "")">
                                    <small class="form-text text-muted">
                                        Enter the postcode for the service address
                                    </small>
                                </div>
                            </div>
                        </div>

                        <div class="form-group text-center mt-4">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-search mr-2"></i> Find Booking
                            </button>
                        </div>
                    </form>

                    <div class="mt-5 pt-4 border-top">
                        <div class="alert alert-info border-0">
                            <h6 class="alert-heading mb-3">Need Help?</h6>
                            <p class="mb-2">If you're having trouble finding your booking, please contact our customer support team:</p>
                            <div class="row mt-3">
                                <div class="col-md-6">
                                    <p class="mb-1"><i class="fas fa-phone-alt mr-2 text-primary"></i> <strong>Phone:</strong> 07405 392 635</p>
                                </div>
                                <div class="col-md-6">
                                    <p class="mb-1"><i class="fas fa-envelope mr-2 text-primary"></i> <strong>Email:</strong> info@mvmcleaning.com</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Find Booking End -->

@section Scripts {
<script>
    // Auto-format postcode to uppercase
    document.getElementById('postcode')?.addEventListener('input', function(e) {
        this.value = this.value.toUpperCase();
    });

    // Auto-format phone number (basic example)
    document.getElementById('phoneNumber')?.addEventListener('input', function(e) {
        let value = this.value.replace(/\D/g, '');
        if (value.length > 0) {
            if (value.startsWith('0')) {
                if (value.length <= 4) {
                    this.value = value;
                } else if (value.length <= 7) {
                    this.value = value.slice(0, 4) + ' ' + value.slice(4);
                } else {
                    this.value = value.slice(0, 4) + ' ' + value.slice(4, 7) + ' ' + value.slice(7, 11);
                }
            }
        }
    });
</script>
}